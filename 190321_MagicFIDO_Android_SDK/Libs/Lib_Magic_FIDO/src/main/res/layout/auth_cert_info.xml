<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cert_info"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
            android:background="@drawable/certi_bg"
        android:orientation="horizontal"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_small_auth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                    app:srcCompat="@drawable/certi" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/general_01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="공인인증서(범용개인)"
                android:textColor="#5c6781"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/certDN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:text="홍길동"
                    android:textColor="#555555"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/issuerDN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="발급자 : 은행기관"
                android:textColor="#5c6781"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/certType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:text="종  류 : 범용개인"
                android:textColor="#5c6781"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/expireDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:text="만료일 : 0000.00.00"
                android:textColor="#5c6781"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>