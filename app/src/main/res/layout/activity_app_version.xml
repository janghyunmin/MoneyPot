<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 버전"
        android:textSize="14dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />


    <ImageView
        android:id="@+id/appImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_app_icon"
        android:layout_marginTop="140dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신 버전"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/appImage"
        app:layout_constraintEnd_toStartOf="@+id/spaceText"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="10dp"
        />

    <View
        android:id="@+id/spaceText"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appImage"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/recentlyVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/appImage"
        app:layout_constraintStart_toEndOf="@+id/spaceText"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        />

    <View
        android:id="@+id/recentlyLine"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        app:layout_constraintTop_toBottomOf="@+id/recentlyVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="13dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 버전"
        android:textColor="@color/text_gray_color"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/recentlyLine"
        app:layout_constraintEnd_toStartOf="@+id/spaceText2"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        />

    <View
        android:id="@+id/spaceText2"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentlyLine"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/nowVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/recentlyLine"
        app:layout_constraintStart_toEndOf="@+id/spaceText2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/versionUpBt"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="현재 최신 버전입니다."
        android:background="@drawable/rectangle_dark_gray"
        app:layout_constraintTop_toBottomOf="@+id/nowVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:textSize="12dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>