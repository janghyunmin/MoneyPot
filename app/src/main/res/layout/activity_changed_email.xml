<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyInfomation.ActivityChangedEmail">

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 변경"
        android:textSize="14dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 이메일 주소를 입력해주세요."
        android:textSize="14dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/topTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        />

    <EditText
    android:id="@+id/emailEditText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="이메일 입력"
    app:layout_constraintTop_toBottomOf="@+id/emailTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="24dp"
    android:inputType="textWebEmailAddress"
    android:textSize="20dp"
    />

    <EditText
        android:id="@+id/emailEditText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="인증번호 8자리 입력"
        app:layout_constraintTop_toBottomOf="@+id/emailTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:inputType="textWebEmailAddress"
        android:textSize="20dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/emailEditText2SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 메일이 오지 않을 경우 스펨 메세지함을 확인해주세요."
        android:textColor="@color/red_text_color"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:visibility="invisible"
        />

    <TextView
    android:id="@+id/emailAuthBt"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:text="인증메일 발송"
    app:layout_constraintTop_toBottomOf="@+id/emailEditText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="40dp"
    android:background="@drawable/rectangle_dark_gray"
    android:textColor="@color/text_gray_color"
    android:gravity="center"
    android:textSize="14dp"
    android:enabled="false"
    />

    <TextView
        android:id="@+id/postAuthBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 나중에 하기"
        android:textSize="14dp"
        android:textColor="@color/text_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/emailAuthBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:id="@+id/authOkBt"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="완료"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_red_5dp"
        android:textColor="@color/text_white_color"
        android:gravity="center"
        android:textSize="14dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/authReBt"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="재발송"
        app:layout_constraintTop_toBottomOf="@+id/authOkBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_gray_line"
        android:textColor="@color/text_black_color"
        android:gravity="center"
        android:textSize="18dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/postAuthBt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 나중에 하기"
        android:textSize="14dp"
        android:textColor="@color/text_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/authReBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        />


</android.support.constraint.ConstraintLayout>