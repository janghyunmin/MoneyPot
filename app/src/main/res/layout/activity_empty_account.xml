<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantec.moneypot.activity.account.ActivityEmptyAccount">

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계좌 미보유"
        android:textSize="14dp"
        android:textColor="@color/c_3d3f42"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_account"
        app:layout_constraintTop_toBottomOf="@+id/backBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"
        />

    <TextView
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="투자를 위해서는 계좌개설이 필요합니다.\n먼저 계좌를 개설하신 후 다시 투자를 진행해주세요."
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="14dp"
        android:textColor="@color/c_3d3f42"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginTop="12dp"
        />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image2"
        app:layout_constraintTop_toBottomOf="@+id/sub"
        android:layout_marginTop="64dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하루만 맡겨도\n수익 지급!"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintStart_toStartOf="@+id/image1"
        app:layout_constraintEnd_toEndOf="@+id/image1"
        android:layout_marginTop="9dp"
        android:lineSpacingMultiplier="1.1"
        />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_clock"
        app:layout_constraintTop_toBottomOf="@+id/sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60초면\n계좌개설 완료!"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        app:layout_constraintStart_toStartOf="@+id/image2"
        app:layout_constraintEnd_toEndOf="@+id/image2"
        android:layout_marginTop="9dp"
        android:lineSpacingMultiplier="1.1"
        />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image2"
        app:layout_constraintTop_toBottomOf="@+id/sub"
        android:layout_marginTop="64dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신분증만\n준비하세요!"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/image3"
        app:layout_constraintStart_toStartOf="@+id/image3"
        app:layout_constraintEnd_toEndOf="@+id/image3"
        android:layout_marginTop="9dp"
        android:lineSpacingMultiplier="1.1"
        />


    <TextView
        android:id="@+id/accountBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간단 계좌개설하기"
        android:textSize="16dp"
        android:textColor="@color/c_ffffff"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="83dp"
        android:paddingEnd="83dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        android:layout_marginTop="57dp"
        android:background="@drawable/custom_bt_selected_29dp"
        />

    <TextView
        android:id="@+id/skipBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음에 투자하기"
        android:textColor="@color/c_9a9a9a"
        app:layout_constraintTop_toBottomOf="@+id/accountBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:textSize="14dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
