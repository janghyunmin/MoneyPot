<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="FinishMakePort"
            type="quantec.com.moneypot.Activity.FinishMakePort.ActivityFinishMakePort"/>

    </data>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/finish_port_save_bt"
        android:layout_marginBottom="10dp"
        android:overScrollMode="never"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".FinishMakePort.PortMakeFinishActivity">

            <ImageView
                android:id="@+id/finish_port_back_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/backlogo"
                />
            <TextView
                android:id="@+id/finish_port_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포트 완성!"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_back_bt"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/normal_text_color"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/finish_port_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로 만드신 포트의 누적 수익률 그래프입니다."
                app:layout_constraintTop_toBottomOf="@+id/finish_port_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="#666666"
                />

            <RelativeLayout
                android:id="@+id/finish_port_chart"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_subtitle"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/finish_port_page_chart_round"
                >

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/finish_port_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/finish_port_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/normal_title_color"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="수익형"
                android:background="@drawable/make_finish_port_category_round"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                app:layout_constraintBottom_toTopOf="@+id/finish_port_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="18dp"
                />

            <View
                android:id="@+id/finish_port_line"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_chart"
                android:layout_marginTop="32dp"
                android:background="#14000000"
                />

            <TextView
                android:id="@+id/finish_port_bottom_cash_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="투자 금액"
                android:textColor="#0081f5"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_line"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                />

            <TextView
                android:id="@+id/finish_port_bottom_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350만원"
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_bottom_cash_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/finish_port_bottom_port_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조합된 포트"
                android:textColor="#0081f5"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_bottom_cash"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/finish_port_bottom_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_bottom_port_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/finish_port_bottom_port2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_bottom_port_title"
                app:layout_constraintLeft_toRightOf="@+id/finish_port_bottom_port"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/finish_port_bottom_port3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_bottom_port"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/finish_port_bottom_port4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_bottom_port"
                app:layout_constraintLeft_toRightOf="@+id/finish_port_bottom_port3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/finish_port_bottom_port5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/finish_port_bottom_port3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:visibility="invisible"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/finish_port_save_bt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grade_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="저장"
        android:textColor="@color/normal_title_color"
        android:textSize="15sp"
        />
</android.support.constraint.ConstraintLayout>
</layout>