<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Main.Fragment.Tab2.Activity.ActivityLeagueForm"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포트리그 참가 신청서"
        android:textSize="16dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        />
    <View
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        app:layout_constraintTop_toBottomOf="@+id/backBt"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="14dp"
                android:textColor="@color/text_black_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="24dp"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_brown_color"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                />
            <View
                android:id="@+id/topLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:layout_marginTop="6dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                />

            <TextView
                android:id="@+id/nameSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참가 시 표시될 이름입니다."
                android:textSize="12dp"
                android:textColor="@color/gray_brown_color"
                app:layout_constraintTop_toBottomOf="@+id/topLine"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/adressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:textSize="14dp"
                android:textColor="@color/text_black_color"
                app:layout_constraintTop_toBottomOf="@+id/nameSubTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="24dp"
                />

            <TextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/adressTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                />

            <View
                android:id="@+id/adressLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                app:layout_constraintTop_toBottomOf="@+id/adress"
                android:layout_marginTop="6dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                />

            <TextView
                android:id="@+id/adressSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우승 상금 수령 및 안내를 위한 연락처입니다."
                android:textSize="12dp"
                android:textColor="@color/gray_brown_color"
                app:layout_constraintTop_toBottomOf="@+id/adressLine"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                />

            <View
                android:id="@+id/bigLine"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f4f4f4"
                app:layout_constraintTop_toBottomOf="@+id/adressSubTitle"
                android:layout_marginTop="36dp"
                />


            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="25dp"
                android:text="참여할 포트 선택"
                android:textColor="@color/text_black_color"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bigLine"/>

            <View
                android:id="@+id/topLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="26dp"
                android:background="#f4f4f4"
                app:layout_constraintTop_toBottomOf="@+id/title2" />

            <TextView
                android:id="@+id/selectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 포트"
                android:textSize="12dp"
                android:textColor="@color/dark_gray_color"
                app:layout_constraintTop_toBottomOf="@+id/topLine2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="26dp"
                />

            <TextView
                android:id="@+id/emptySelectPot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택 된 포트가 없습니다."
                android:textSize="14dp"
                android:textColor="@color/text_black_color"
                app:layout_constraintTop_toBottomOf="@+id/selectTitle"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:background="@drawable/round_leagueform_gray"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selectPotLayout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@+id/selectTitle"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/round_leagueform_redline"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/chBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checkbox_on_red_24_dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/selectedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETF 어벤저스"
                    android:textColor="@color/text_black_color"
                    android:textSize="14dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="@+id/chBt"
                    app:layout_constraintBottom_toBottomOf="@+id/chBt"
                    app:layout_constraintStart_toEndOf="@+id/chBt"
                    />
                <TextView
                    android:id="@+id/selectedRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.02%"
                    android:textSize="16dp"
                    android:textColor="#f02626"
                    app:layout_constraintTop_toTopOf="@+id/chBt"
                    app:layout_constraintBottom_toBottomOf="@+id/chBt"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/madePotTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 만든 포트"
                android:textSize="12dp"
                android:textColor="@color/dark_gray_color"
                app:layout_constraintTop_toBottomOf="@+id/selectTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="81dp"
                android:layout_marginStart="26dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/madePotTitle"
                android:overScrollMode="never"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/viewBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_potform_red"
                android:gravity="center"
                android:text="전체보기"
                android:textColor="@color/text_white_color"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

            <TextView
                android:id="@+id/makeBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/round_potform_red_line"
                android:gravity="center"
                android:text="포트 만들기"
                android:textColor="@color/text_red_color"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

            <View
                android:id="@+id/mLine"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                app:layout_constraintTop_toBottomOf="@+id/makeBt"
                />


            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 동의"
                android:textSize="14dp"
                android:textColor="@color/text_black_color"
                app:layout_constraintTop_toBottomOf="@+id/mLine"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="21dp"
                android:layout_marginTop="25dp"
                />

            <ImageView
                android:id="@+id/checkBt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_off_whitegray_24_dp"
                app:layout_constraintTop_toBottomOf="@+id/title3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_whitegray_24_dp_2"
                app:layout_constraintTop_toTopOf="@+id/checkBt1"
                app:layout_constraintBottom_toBottomOf="@+id/checkBt1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                />

            <TextView
                android:id="@+id/checkBt1Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="개인 정보 수집 약관에 동의합니다."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkBt1"
                app:layout_constraintTop_toTopOf="@+id/checkBt1"
                app:layout_constraintBottom_toBottomOf="@+id/checkBt1"
                android:layout_marginStart="4dp"
                />


            <ImageView
                android:id="@+id/checkBt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_off_whitegray_24_dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBt1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:id="@+id/checkBt2Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="리그 참가 안내사항을 모두 확인하였습니다."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkBt2"
                app:layout_constraintTop_toTopOf="@+id/checkBt2"
                app:layout_constraintBottom_toBottomOf="@+id/checkBt2"
                android:layout_marginStart="4dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_whitegray_24_dp_2"
                app:layout_constraintTop_toTopOf="@+id/checkBt2"
                app:layout_constraintBottom_toBottomOf="@+id/checkBt2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                />

            <TextView
                android:id="@+id/enterBt"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="참가하기"
                android:textColor="@color/text_white_color"
                android:background="#f02626"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/checkBt2"
                android:textSize="18dp"
                android:layout_marginTop="41dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>