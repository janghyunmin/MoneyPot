<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityLifeChallenge.ActivityLifeChallenge"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라이프 챌린지"
        android:textSize="14dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:overScrollMode="never"
        android:paddingBottom="5dp"
        />


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/botInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_question_gray"
            android:layout_marginStart="16dp"
            />

        <quantec.com.moneypot.Util.SoftKeyboardUtil.KeyPressEditText
            android:id="@+id/talkEditText2"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:background="@drawable/circle_gray_line"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:maxLength="15"
            android:paddingStart="10dp"
            android:enabled="false"
            android:textAlignment="center"
            android:textColor="@color/text_black_color"
            android:inputType="textWebEditText"
            android:imeOptions="actionDone"
            android:hint="목적을 입력해 주세요."
            android:layout_marginStart="12dp"
            android:textSize="14dp"
            android:visibility="visible"
            />

        <quantec.com.moneypot.Util.SoftKeyboardUtil.KeyPressEditText
            android:id="@+id/talkEditText"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:background="@drawable/circle_gray_line"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:enabled="false"
            android:textAlignment="center"
            android:textColor="@color/text_black_color"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:hint="금액을 입력해 주세요."
            android:layout_marginStart="12dp"
            android:textSize="14dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/yesBt"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="응, 있지!"
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_gray_line"
            android:layout_marginStart="54dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/noBt"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="아니, 없어."
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_gray_line"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/yesBt3"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="응, 있지!"
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_gray_line"
            android:layout_marginStart="54dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/noBt3"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="아니, 없어."
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_gray_line"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/monthBt"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="월 마다!"
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_gray_line"
            android:layout_marginStart="26dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/allBt"
            android:layout_width="163dp"
            android:layout_height="40dp"
            android:text="모아둔 돈으로 한 번에!"
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_gray_line"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/retryBt"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="다시 하기"
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_gray_line"
            android:layout_marginStart="26dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/joinBt"
            android:layout_width="163dp"
            android:layout_height="40dp"
            android:text="30초만에 가입하고 확인!"
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            android:background="@drawable/circle_red_line"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/sendBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_black_color"
            android:text="보내기"
            android:layout_marginStart="14dp"
            />
    </LinearLayout>

    <quantec.com.moneypot.Activity.ActivityLifeChallenge.WheelYearPicker
        android:id="@+id/pickerWheel"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:wheel_curved="true"
        app:wheel_cyclic="true"
        app:wheel_item_align="center"
        app:wheel_item_text_size="16dp"
        app:wheel_item_text_color="@color/gray_brown_color"
        app:wheel_selected_item_text_color="@color/red_text_color"
        app:wheel_item_space="19dp"
        android:background="#FFFFFF"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/pickerWheelBt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="확인"
        android:textColor="@color/gray_brown_color"
        android:gravity="center"
        android:textSize="18dp"
        android:background="#fafafa"
        app:layout_constraintBottom_toTopOf="@+id/pickerWheel"
        android:enabled="false"
        android:visibility="invisible"
        />

</android.support.constraint.ConstraintLayout>