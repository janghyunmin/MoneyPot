    <quantec.com.moneypot.Activity.ActivityLifeChallenge.WheelYearPicker
        android:id="@+id/pickerWheel"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:wheel_curved="true"
        app:wheel_cyclic="true"
        app:wheel_item_align="center"
        app:wheel_item_text_size="23dp"
        app:wheel_item_text_color="@color/text_black_color"
        app:wheel_selected_item_text_color="@color/red_text_color"
        app:wheel_item_space="12dp"
        android:background="#bebebe"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/pickerWheelBt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="확인"
        android:textColor="@color/text_black_color"
        android:gravity="center"
        android:textSize="16dp"
        android:background="#969696"
        app:layout_constraintBottom_toTopOf="@+id/pickerWheel"
        android:visibility="invisible"
        android:enabled="false"
        />

