<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login.ActivityLogin">

    <TextView
        android:id="@+id/activity_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호를 입력해주세요"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/activity_login_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인 인증을 위해 필요합니다"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#464646"
        />

    <EditText
        android:id="@+id/activity_login_phoneEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_subtitle"
        android:inputType="phone"
        android:hint="01043211234"
        android:textColorHint="#9e9e9e"
        android:textSize="25dp"
        android:backgroundTint="#ff0000"
        android:maxLength="11"
        />

    <TextView
        android:id="@+id/activity_login_phoneEdittext_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호의 형식이 올바르지 않습니다."
        android:textSize="10dp"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_phoneEdittext"
        app:layout_constraintStart_toStartOf="@id/activity_login_phoneEdittext"
        android:layout_marginLeft="3dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/activity_login_Bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FF0000"
        android:text="확인"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />

</android.support.constraint.ConstraintLayout>