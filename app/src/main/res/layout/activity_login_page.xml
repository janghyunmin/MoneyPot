<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login.loginPage.ActivityLoginPage"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/loginPage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_page_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/normal_text_color"
        android:textSize="24dp"
        android:lineSpacingMultiplier="1.3"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_red_coin"
        app:layout_constraintBottom_toBottomOf="@+id/loginPage_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="24dp"
        />

    <TextView
        android:id="@+id/textIdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="14dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/loginPage_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        />
    <TextView
        android:id="@+id/textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/button_enable_text"
        app:layout_constraintTop_toBottomOf="@+id/textIdTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        />
    <View
        android:id="@+id/textIdLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        app:layout_constraintTop_toBottomOf="@+id/textId"
        android:layout_marginTop="6.2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />

    <TextView
        android:id="@+id/textPwTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="14dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/textIdLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        />
    <EditText
        android:id="@+id/textPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="20dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/textPwTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:hint="비밀번호 입력"
        android:textColorHint="@color/button_enable_text"
        android:inputType="textWebPassword"
        />
    <View
        android:id="@+id/textPwLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        app:layout_constraintTop_toBottomOf="@+id/textPw"
        android:layout_marginTop="6.2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />

    <TextView
        android:id="@+id/joinBt"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="로그인"
        android:background="@drawable/login_round"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/findPw"
        android:gravity="center"
        android:textColor="@color/button_enable_text"
        />

    <TextView
        android:id="@+id/findPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊으셨나요?"
        android:textSize="13dp"
        android:textColor="#9a9a9a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>