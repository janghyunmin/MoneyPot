<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="MainActivity"
            type="quantec.com.moneypot.Activity.Main.MainActivity"/>

    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll"
        >
        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activity.Main.MainActivity"
            android:id="@+id/main_layout"
            >
            <FrameLayout
                android:id="@+id/ContainerContain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottombar"
                />
            <com.roughike.bottombar.BottomBar
                android:id="@+id/bottombar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:bb_tabXmlResource="@xml/bottombar_tabs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="10sp"
                />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/main_dim_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#3d000000"
            />
        <LinearLayout
            android:id="@+id/Frizon_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="52dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:alpha="0.5"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/make_port_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/port_slide_round"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:visibility="gone"
            >
            <RelativeLayout
                android:id="@+id/make_port_layout_pre"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/make_port_pre_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/delete_pressed_text"
                    android:textSize="13.8sp"
                    />
                <TextView
                    android:id="@+id/make_port_title_pre_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/make_port_pre_number"
                    android:textSize="11sp"
                    android:textColor="#9a9a9a"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/make_port_layout_container"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/make_port_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/delete_pressed_text"
                    android:textSize="13.8sp"
                    />
                <TextView
                    android:id="@+id/make_port_title_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/make_port_number"
                    android:textSize="11sp"
                    android:layout_marginTop="13dp"
                    android:textColor="#9a9a9a"
                    android:layout_marginLeft="5dp"
                    />
                    <quantec.com.moneypot.Util.SoftKeyboardUtil.BackPressEditText
                    android:id="@+id/make_port_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_below="@+id/make_port_number"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/normal_text_color"
                    android:textSize="25sp"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="13"
                    android:imeOptions="actionDone"
                    />
                <TextView
                    android:id="@+id/make_port_cash_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만원"
                    android:layout_below="@+id/make_port_number"
                    android:layout_toRightOf="@+id/make_port_cash"
                    android:layout_alignBaseline="@+id/make_port_cash"
                    android:textSize="20sp"
                    android:textColor="@color/normal_text_color"
                    />
                <ImageView
                    android:id="@+id/make_port_cash_replay_bt"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_below="@+id/make_port_number"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/refresh_small_gray"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="15dp"
                    />
                <View
                    android:id="@+id/make_port_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#56cff1"
                    android:layout_below="@+id/make_port_cash_text"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="3dp"
                    />
                <LinearLayout
                    android:id="@+id/make_port_bt_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/make_port_cash_text"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="13dp"
                    >
                    <Button
                        android:id="@+id/make_port_plus_bt1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="+ 10만원"
                        android:background="@drawable/tab1_make_port_bt_round"
                        android:textColor="@color/normal_text_color"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        />
                    <Button
                        android:id="@+id/make_port_plus_bt2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="+ 50만원"
                        android:background="@drawable/tab1_make_port_bt_round"
                        android:textColor="@color/normal_text_color"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/make_port_plus_bt3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="+ 100만원"
                        android:background="@drawable/tab1_make_port_bt_round"
                        android:textColor="@color/normal_text_color"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/make_port_plus_bt4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="+ 200만원"
                        android:background="@drawable/tab1_make_port_bt_round"
                        android:textColor="@color/normal_text_color"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/make_port_plus_bt5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="+ 500만원"
                        android:background="@drawable/tab1_make_port_bt_round"
                        android:textColor="@color/normal_text_color"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/make_port_bt_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/make_port_bt_top"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <Button
                        android:id="@+id/make_port_up_bt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="안정형"
                        android:textSize="13sp"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:paddingRight="35dp"
                        android:paddingLeft="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/make_port_bt_normal_round"
                        android:textColor="@color/make_port_normal_bt_color"
                        />
                    <Space
                        android:layout_width="7dp"
                        android:layout_height="0dp" />
                    <Button
                        android:id="@+id/make_port_center_bt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="중립형"
                        android:textSize="13sp"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:paddingRight="35dp"
                        android:paddingLeft="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/make_port_bt_pressed_round"
                        android:textColor="@color/normal_title_color"
                        />
                    <Space
                        android:layout_width="7dp"
                        android:layout_height="0dp" />
                    <Button
                        android:id="@+id/make_port_stable_bt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="수익형"
                        android:textSize="13sp"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:paddingRight="35dp"
                        android:paddingLeft="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/make_port_bt_normal_round"
                        android:textColor="#9a9a9a"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ifno_small"
                    android:layout_toLeftOf="@+id/make_port_info_text_bottom"
                    android:layout_below="@+id/make_port_bt_bottom"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/make_port_info_text_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/make_port_bt_bottom"
                    android:layout_centerHorizontal="true"
                    android:text="수익률과 안정성 모두를 고려하는 방법"
                    android:textColor="#0081f5"
                    android:textSize="12sp"
                    android:layout_marginLeft="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/make_port_post_no_bt"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bottom_button_pre"
                        android:text="이전"
                        android:textColor="@color/normal_title_color"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/make_port_post_ok_bt"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="@drawable/grade_bg"
                        android:text="포트 만들기"
                        android:textColor="@color/normal_title_color"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/make_port_pre_ok_bt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/grade_bg"
                    android:text="포트 만들기"
                    android:textColor="@color/normal_title_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</layout>