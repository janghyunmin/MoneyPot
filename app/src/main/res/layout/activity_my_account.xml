<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantec.moneypot.activity.account.ActivityMyAccount"
    android:background="#FAFAFA"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@drawable/select_bt"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 자산 보기"
        android:textSize="12dp"
        android:textColor="@color/text_white_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/backBt"
        android:overScrollMode="never"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총자산"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/text_white_color"
                android:textSize="12dp"
                />

            <LinearLayout
                android:id="@+id/topLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24dp"
                    android:textColor="@color/text_white_color"
                    app:layout_constraintEnd_toStartOf="@+id/topLine"
                    app:layout_constraintTop_toBottomOf="@+id/subTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/topLine"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@color/text_white_color"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/topLine"
                    app:layout_constraintTop_toBottomOf="@+id/subTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/topLine"
                    />
                <View
                    android:id="@+id/topLine"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subTitle"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/historyBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/topLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계좌입출금내역"
                    android:textColor="@color/text_white_color"
                    android:textSize="13dp"
                    android:alpha="0.48"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right_white"
                    />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/accountLayout"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="@drawable/account_layout"
                app:layout_constraintTop_toBottomOf="@+id/historyBt"
                android:layout_marginTop="13dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                >

                <TextView
                    android:id="@+id/accTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출금가능금액"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="56dp"
                    android:textSize="10dp"
                    android:textColor="@color/c_9a9a9a"
                    />
                <TextView
                    android:id="@+id/accTitle1Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0원"
                    app:layout_constraintTop_toBottomOf="@+id/accTitle1"
                    app:layout_constraintStart_toStartOf="@+id/accTitle1"
                    app:layout_constraintEnd_toEndOf="@+id/accTitle1"
                    android:textSize="16dp"
                    android:textColor="@color/c_3d3f42"
                    android:layout_marginTop="6dp"
                    />

                <TextView
                    android:id="@+id/accTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미수금액"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="66dp"
                    android:textSize="10dp"
                    android:textColor="@color/c_9a9a9a"
                    />
                <TextView
                    android:id="@+id/accTitle2Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0원"
                    app:layout_constraintTop_toBottomOf="@+id/accTitle2"
                    app:layout_constraintStart_toStartOf="@+id/accTitle2"
                    app:layout_constraintEnd_toEndOf="@+id/accTitle2"
                    android:layout_marginTop="6dp"
                    android:textSize="16dp"
                    android:textColor="@color/c_3d3f42"
                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/dash_line"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/accTitle2Price"
                    android:layout_marginTop="12dp"
                    android:layerType="software"
                    />

                <TextView
                    android:id="@+id/accTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체수익금"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="60dp"
                    android:textSize="10dp"
                    android:textColor="@color/c_9a9a9a"
                    />
                <TextView
                    android:id="@+id/accTitle3Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0원"
                    app:layout_constraintTop_toBottomOf="@+id/accTitle3"
                    app:layout_constraintStart_toStartOf="@+id/accTitle3"
                    app:layout_constraintEnd_toEndOf="@+id/accTitle3"
                    android:layout_marginTop="6dp"
                    android:textSize="16dp"
                    android:textColor="@color/c_3d3f42"
                    />

                <TextView
                    android:id="@+id/accTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체수익률"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="61dp"
                    android:textSize="10dp"
                    android:textColor="@color/c_9a9a9a"
                    />
                <TextView
                    android:id="@+id/accTitle4Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    app:layout_constraintTop_toBottomOf="@+id/accTitle4"
                    app:layout_constraintStart_toStartOf="@+id/accTitle4"
                    app:layout_constraintEnd_toEndOf="@+id/accTitle4"
                    android:layout_marginTop="6dp"
                    android:textSize="16dp"
                    android:textColor="@color/c_6e6eff"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/AccountedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/accountLayout"
                android:visibility="gone"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/account_layout"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginTop="29dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:overScrollMode="never"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/custom_bt_13dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MP CMA 201-11-01106"
                        android:textSize="11dp"
                        android:textColor="@color/c_ffffff"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                    <ImageView
                        android:id="@+id/copyImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_copy_white"
                        app:layout_constraintEnd_toStartOf="@+id/copyText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        android:id="@+id/copyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복사하기"
                        android:textSize="10dp"
                        android:textColor="@color/c_ffffff"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/AccountingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/accountLayout"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/accountingBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_open_account"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    />

                <ImageView
                    android:id="@+id/accImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alert_blue"
                    app:layout_constraintTop_toTopOf="@+id/accountingBt"
                    app:layout_constraintStart_toStartOf="@+id/accountingBt"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="47dp"
                    />
                <TextView
                    android:id="@+id/accountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="진행중인 계좌개설이 있습니다."
                    android:textSize="16dp"
                    android:textColor="@color/c_5182ff"
                    app:layout_constraintTop_toTopOf="@+id/accImage"
                    app:layout_constraintBottom_toBottomOf="@+id/accImage"
                    app:layout_constraintStart_toEndOf="@+id/accImage"
                    android:layout_marginStart="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="버튼을 누르면 진행됩니다."
                    app:layout_constraintTop_toBottomOf="@+id/accountTitle"
                    app:layout_constraintStart_toStartOf="@+id/accountTitle"
                    app:layout_constraintEnd_toEndOf="@+id/accountTitle"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/c_696b6d"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/noAccountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/accountLayout"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_no_account"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="40dp"
                    />
                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계좌개설 내역이 없습니다."
                    android:textSize="16dp"
                    android:textColor="@color/c_9a9a9a"
                    app:layout_constraintTop_toBottomOf="@+id/image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    />
                <TextView
                    android:id="@+id/desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지금 바로 계좌개설 하시고 다양한 혜택을 받아보세요!"
                    android:textSize="11dp"
                    android:textColor="@color/c_9a9a9a"
                    app:layout_constraintTop_toBottomOf="@+id/desc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/accountBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계좌개설 하기"
                    android:textColor="@color/c_ffffff"
                    android:textSize="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingStart="34dp"
                    android:paddingEnd="34dp"
                    app:layout_constraintTop_toBottomOf="@+id/desc2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/custom_bt_selected_29dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>
