<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="MyInfoActivity"
            type="quantec.com.moneypot.Activity.Myinfo.ActivityMyinfo"/>

    </data>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >
        <RelativeLayout
            android:id="@+id/my_info_page_top_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내자산"
                android:textColor="@color/red_text_color"
                android:textSize="13.8dp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/my_info_page_close_bt"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/close_small_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/my_info_page_my_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_top_layout"
            android:text="21,063,077"
            android:textSize="26dp"
            android:textColor="@color/normal_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/normal_text_color"
            android:textSize="16.3dp"
            app:layout_constraintStart_toEndOf="@+id/my_info_page_my_cash"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_top_layout"
            app:layout_constraintBaseline_toBaselineOf="@+id/my_info_page_my_cash"
            />

        <View
            android:id="@+id/my_info_page_middle_line"
            android:layout_width="0.5dp"
            android:layout_height="42.5dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_my_cash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="27.5dp"
            android:background="#F4F4F4"
            />

        <TextView
            android:id="@+id/my_info_page_middle_cash_title"
            android:layout_width="49.5dp"
            android:layout_height="18.5dp"
            android:text="수익금"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_my_cash"
            app:layout_constraintEnd_toStartOf="@+id/my_info_page_middle_line"
            android:layout_marginTop="24dp"
            android:layout_marginRight="65dp"
            android:textSize="9dp"
            android:background="@drawable/bt_gray_line_my_info_page"
            android:gravity="center"
            android:textColor="@color/normal_text_color"
            />
        <TextView
            android:id="@+id/my_info_page_middle_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="163,077"
            android:textColor="@color/red_text_color"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            app:layout_constraintEnd_toStartOf="@+id/my_info_page_middle_cash_sub"
            />
        <TextView
            android:id="@+id/my_info_page_middle_cash_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/red_text_color"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            app:layout_constraintEnd_toStartOf="@+id/my_info_page_middle_line"
            android:layout_marginRight="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/my_info_page_middle_cash"
            />

        <TextView
            android:id="@+id/my_info_page_middle_rate_title"
            android:layout_width="49.5dp"
            android:layout_height="18.5dp"
            android:text="수익률"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_my_cash"
            app:layout_constraintStart_toEndOf="@+id/my_info_page_middle_line"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="64dp"
            android:textSize="9dp"
            android:background="@drawable/bt_gray_line_my_info_page"
            android:gravity="center"
            android:textColor="@color/normal_text_color"
            />

        <TextView
            android:id="@+id/my_info_page_middle_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="68.2"
            android:textColor="@color/red_text_color"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/my_info_page_middle_line"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            android:layout_marginLeft="62.5dp"
            />
        <TextView
            android:id="@+id/my_info_page_middle_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/red_text_color"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            app:layout_constraintStart_toEndOf="@+id/my_info_page_middle_rate"
            app:layout_constraintBaseline_toBaselineOf="@+id/my_info_page_middle_rate"
            />

        <View
            android:id="@+id/my_info_page_middle_ho_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F4F4F4"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="17dp"
            />

        <TextView
            android:id="@+id/my_info_page_chart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수익률 종합 그래프"
            android:textColor="@color/dark_gray_color"
            android:textSize="9dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_ho_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="18.5dp"
            android:layout_marginTop="22dp"
            />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/my_info_page_chart_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="45dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="15dp"
            android:background="#fafafa"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_chart_title"
            />
        <LinearLayout
            android:id="@+id/my_info_page_chart_view_dur_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:orientation="horizontal"
            android:background="@drawable/chart_bottom_background"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_chart_view"
            android:layout_marginTop="7dp"
            >
            <Button
                android:id="@+id/my_info_page_chart_view_dur1_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/unselected_round_button"
                android:text="1개월"
                android:textColor="#959595"
                android:textSize="12sp" />
            <Button
                android:id="@+id/my_info_page_chart_view_dur3_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/unselected_round_button"
                android:text="3개월"
                android:textColor="#959595"
                android:textSize="12sp" />
            <Button
                android:id="@+id/my_info_page_chart_view_dur6_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/unselected_round_button"
                android:text="6개월"
                android:textColor="#959595"
                android:textSize="12sp" />
            <Button
                android:id="@+id/my_info_page_chart_view_dura_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="누적"
                android:textColor="@color/delete_pressed_text"
                android:textSize="12sp" />
        </LinearLayout>


        <View
            android:id="@+id/my_info_page_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="10.5dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_chart_view_dur_layout"
            android:layout_marginTop="45dp"
            android:background="#FAFAFA"
            />

        <TextView
            android:id="@+id/my_info_page_invest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="투자 중인 내역"
            android:textColor="@color/dark_gray_color"
            android:textSize="9dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_bottom_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="18.5dp"
            android:layout_marginTop="22dp"
            />

        <RelativeLayout
            android:id="@+id/my_info_page_invest_port"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_invest_title"
            android:gravity="center_vertical"
            android:layout_marginTop="35dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포트"
                android:textSize="18dp"
                android:textColor="@color/normal_text_color"
                android:layout_marginLeft="19dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_bottom"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_info_page_invest_stock"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_invest_port"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주식"
                android:textSize="18dp"
                android:textColor="@color/normal_text_color"
                android:layout_marginLeft="19dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_bottom"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_info_page_invest_cash"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_invest_stock"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현금"
                android:textSize="18dp"
                android:textColor="@color/normal_text_color"
                android:layout_marginLeft="19dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_bottom"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_info_page_invest_p2p"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_invest_cash"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P2P"
                android:textSize="18dp"
                android:textColor="@color/normal_text_color"
                android:layout_marginLeft="19dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_bottom"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
</layout>