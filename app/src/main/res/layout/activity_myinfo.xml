<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="MyInfoActivity"
            type="quantec.com.moneypot.Activity.Myinfo.ActivityMyinfo"/>

    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/backBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 자산 보기"
            android:textSize="16dp"
            android:textColor="@color/text_black_color"
            app:layout_constraintTop_toTopOf="@+id/backBt"
            app:layout_constraintBottom_toBottomOf="@+id/backBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/accountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MP CMA 201-11-03585"
            android:textColor="@color/gray_brown_color"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp"
            />



        <TextView
            android:id="@+id/totalCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/accountNumber"
            android:text="21,063,077"
            android:textSize="24dp"
            android:textColor="@color/normal_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/normal_text_color"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/totalCash"
            app:layout_constraintTop_toBottomOf="@+id/accountNumber"
            app:layout_constraintBaseline_toBaselineOf="@+id/totalCash"
            />


        <TextView
            android:id="@+id/tradeHistoryBt"
            android:layout_width="77dp"
            android:layout_height="28dp"
            android:text="거래내역"
            android:textSize="12dp"
            android:textColor="@color/text_black_color"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/totalCash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/bt_gray_line_my_info_page"
            />

        <View
            android:id="@+id/my_info_page_middle_line"
            android:layout_width="1dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tradeHistoryBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="29dp"
            android:background="#F4F4F4"
            />

        <TextView
            android:id="@+id/my_info_page_middle_cash_title"
            android:layout_width="49.5dp"
            android:layout_height="18.5dp"
            android:text="수익금"
            app:layout_constraintTop_toBottomOf="@+id/tradeHistoryBt"
            app:layout_constraintEnd_toStartOf="@+id/my_info_page_middle_line"
            android:layout_marginTop="24dp"
            android:layout_marginRight="65dp"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/gray_brown_color"
            />
        <TextView
            android:id="@+id/my_info_page_middle_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,163,077"
            android:textColor="@color/text_black_color"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            app:layout_constraintEnd_toStartOf="@+id/my_info_page_middle_cash_sub"
            />
        <TextView
            android:id="@+id/my_info_page_middle_cash_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/text_black_color"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            app:layout_constraintEnd_toStartOf="@+id/my_info_page_middle_line"
            android:layout_marginRight="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/my_info_page_middle_cash"
            />

        <TextView
            android:id="@+id/my_info_page_middle_rate_title"
            android:layout_width="49.5dp"
            android:layout_height="18.5dp"
            android:text="수익률"
            app:layout_constraintTop_toBottomOf="@+id/tradeHistoryBt"
            app:layout_constraintStart_toEndOf="@+id/my_info_page_middle_line"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="64dp"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/gray_brown_color"
            />

        <TextView
            android:id="@+id/my_info_page_middle_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="68.02"
            android:textColor="@color/red_text_color"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/my_info_page_middle_line"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            android:layout_marginLeft="62.5dp"
            />
        <TextView
            android:id="@+id/my_info_page_middle_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/red_text_color"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_cash_title"
            app:layout_constraintStart_toEndOf="@+id/my_info_page_middle_rate"
            app:layout_constraintBaseline_toBaselineOf="@+id/my_info_page_middle_rate"
            />

        <View
            android:id="@+id/my_info_page_middle_ho_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F4F4F4"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="17dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f4f4f4"
            app:layout_constraintTop_toBottomOf="@+id/my_info_page_middle_ho_line"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:id="@+id/currentTotalInvestTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 투자 중인 상품"
                android:textColor="@color/text_black_color"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="33dp"
                />

            <TextView
                android:id="@+id/currentTotalInvestCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개"
                android:textColor="@color/red_text_color"
                android:textSize="12dp"
                android:layout_marginTop="33dp"
                android:layout_toEndOf="@+id/currentTotalInvestTitle"
                android:layout_alignBottom="@+id/currentTotalInvestTitle"
                android:layout_marginStart="5dp"
                />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/currentTotalInvestTitle"
                android:layout_marginTop="9dp"
                />



        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>