<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="PortProfileModify"
            type="quantec.com.moneypot.Activity.PortProfileModify.ActivityPortProfileModify"/>

    </data>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/Port_Profile_Modify_top"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/Port_Profile_Modify_top_cancle_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/normal_text_color"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:onClick="@{PortProfileModify::TopCancleBT}"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 편집"
            android:layout_centerInParent="true"
            android:textColor="@color/normal_text_color"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/Port_Profile_Modify_top_ok_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="@color/normal_text_color"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f3f3f3"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/Port_Profile_Modify_Image"
                android:layout_width="109.5dp"
                android:layout_height="109.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="42dp"
                android:background="@drawable/recyclerview_round_image"
                />
            <ImageView
                android:id="@+id/Port_Profile_Modify_Image_reset_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/Port_Profile_Modify_Image"
                app:layout_constraintStart_toStartOf="@+id/Port_Profile_Modify_Image"
                app:layout_constraintEnd_toEndOf="@+id/Port_Profile_Modify_Image"
                android:src="@drawable/img_reset"
                android:layout_marginLeft="90dp"
                />
            <TextView
                android:id="@+id/Port_Profile_Modify_Image_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포트의 대표사진을 변경 할 수 있습니다."
                android:textSize="12sp"
                android:textColor="#505050"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_Image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="18.5dp"
                />
            <Button
                android:id="@+id/Port_Profile_Modify_Image_album_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_Image_info"
                app:layout_constraintEnd_toStartOf="@+id/Port_Profile_Modify_Image_space"
                android:text="앨범에서 사진 선택"
                android:background="@drawable/my_port_modify_ok_bt"
                android:textColor="@color/normal_title_color"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:textSize="13sp"
                android:layout_marginTop="22.5dp"
                />
            <Space
                android:id="@+id/Port_Profile_Modify_Image_space"
                android:layout_width="12dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_Image_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <Button
                android:id="@+id/Port_Profile_Modify_Image_photo_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_Image_info"
                app:layout_constraintStart_toEndOf="@+id/Port_Profile_Modify_Image_space"
                android:text="사진 촬영 하기"
                android:background="@drawable/my_port_modify_ok_bt"
                android:textColor="@color/normal_title_color"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:paddingRight="36dp"
                android:paddingLeft="36dp"
                android:textSize="13sp"
                android:layout_marginTop="22.5dp"
                />
            <View
                android:id="@+id/Port_Profile_Modify_Image_line"
                android:layout_width="match_parent"
                android:layout_height="14.5dp"
                android:layout_marginTop="41.5dp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_Image_photo_bt"
                android:background="@drawable/port_profile_middle_line_shadow"
                />
            <TextView
                android:id="@+id/Port_Profile_Modify_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="#9a9a9a"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_Image_line"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="18.5dp"
                android:layout_marginTop="19dp"
                />
            <LinearLayout
                android:id="@+id/Port_Profile_Modify_name_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_name_title"
                android:gravity="center_vertical"
                android:layout_marginLeft="18.5dp"
                >
                <TextView
                    android:id="@+id/Port_Profile_Modify_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text_color"
                    />
            </LinearLayout>
            <View
                android:id="@+id/Port_Profile_Modify_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f3f3f3"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_name_layout"
                />
            <TextView
                android:id="@+id/Port_Profile_Modify_desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설명"
                android:textColor="#9a9a9a"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_bottom_line"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="18.5dp"
                android:layout_marginTop="33dp"
                />
            <LinearLayout
                android:id="@+id/Port_Profile_Modify_desc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_desc_title"
                android:layout_marginLeft="18.5dp"
                android:layout_marginRight="47.5dp"
                android:layout_marginTop="16dp"
                >
                <TextView
                    android:id="@+id/Port_Profile_Modify_desc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text_color"
                    />
            </LinearLayout>
            <View
                android:id="@+id/Port_Profile_Modify_last_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f3f3f3"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_desc_layout"
                android:layout_marginTop="17.5dp"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@+id/Port_Profile_Modify_last_bottom_line"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>
</layout>