<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <ImageView
        android:id="@+id/searchBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포트 요리"
        android:textSize="16dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        />
    <ImageView
        android:id="@+id/userBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:theme="@style/TabTheme"
        app:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="10dp">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:elevation="0dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <quantec.com.moneypot.util.view.SwipeViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/makePotBt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#f4f4f4"
        />

    <RelativeLayout
        android:id="@+id/makePotBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >
            <TextView
                android:id="@+id/defaultNum"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="선택 없음"
                android:textSize="14dp"
                android:textColor="@color/text_black_color"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="24dp"
                />
            <TextView
                android:id="@+id/defaultTitle"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="2개 이상을 선택해주세요."
                android:textColor="@color/text_gray_color"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/defaultNum"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                />
            <ImageView
                android:id="@+id/downBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_up_gray_32_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="17dp"
                android:visibility="invisible"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/portControlView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayout"
            android:visibility="gone"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/topLine"
                android:background="#fafafa"
                android:visibility="gone"
                />

            <View
                android:id="@+id/topLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f4"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                />

            <TextView
                android:id="@+id/stableBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안정형"
                android:background="@drawable/click_roundbt"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/text_white_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topLine"
                android:layout_marginStart="25dp"
                android:layout_marginTop="14dp"
                />
            <TextView
                android:id="@+id/middleBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중립형"
                android:background="@drawable/normal_roundbt"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/gray_brown_color"
                app:layout_constraintStart_toEndOf="@+id/stableBt"
                app:layout_constraintTop_toBottomOf="@+id/topLine"
                android:layout_marginStart="9dp"
                android:layout_marginTop="14dp"
                />
            <TextView
                android:id="@+id/adventBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모험형"
                android:background="@drawable/normal_roundbt"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/gray_brown_color"
                app:layout_constraintStart_toEndOf="@+id/middleBt"
                app:layout_constraintTop_toBottomOf="@+id/topLine"
                android:layout_marginStart="9dp"
                android:layout_marginTop="14dp"
                />

            <ImageView
                android:id="@+id/infoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_off_gray"
                app:layout_constraintTop_toBottomOf="@+id/stableBt"
                app:layout_constraintStart_toStartOf="@+id/stableBt"
                app:layout_constraintEnd_toEndOf="@+id/stableBt"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위험성과 수익률을 적절히 생각하는 방법"
                android:textSize="12dp"
                android:textColor="@color/gray_brown_color"
                app:layout_constraintStart_toEndOf="@+id/infoImage"
                app:layout_constraintTop_toTopOf="@+id/infoImage"
                app:layout_constraintBottom_toBottomOf="@+id/infoImage"
                android:layout_marginStart="3dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                app:layout_constraintTop_toBottomOf="@+id/infoText"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


