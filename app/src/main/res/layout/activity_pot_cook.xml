<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Main.Fragment.FgTab2.ActivityPotCook"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/searchBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포트 요리"
        android:textSize="16dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        />
    <ImageView
        android:id="@+id/userBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:theme="@style/TabTheme"
        app:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="10dp">
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:elevation="0dp"/>
    </android.support.design.widget.AppBarLayout>

    <quantec.com.moneypot.CustomView.SwipeViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/makePotBt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#f4f4f4"
        />


    <RelativeLayout
        android:id="@+id/makePotBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >
            <TextView
                android:id="@+id/defaultNum"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="선택 없음"
                android:textSize="14dp"
                android:textColor="@color/text_black_color"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                />
            <TextView
                android:id="@+id/defaultTitle"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="2개 이상을 선택해주세요."
                android:textColor="@color/text_gray_color"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/defaultNum"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                />
            <ImageView
                android:id="@+id/downBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_up_gray_32_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="17dp"
                android:visibility="invisible"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ab"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_below="@+id/topLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:id="@+id/next2Bt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_below="@+id/ab"
            >
            <TextView
                android:id="@+id/prevBt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="이전"
                android:gravity="center"
                android:background="#FAFAFA"
                android:textSize="18dp"
                android:textColor="#cccccc"
                android:enabled="false"
                />
            <TextView
                android:id="@+id/okBt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="확인"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/text_white_color"
                android:background="#F02626"
                android:enabled="false"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/nextBt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="다음"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#cccccc"
            android:background="#fafafa"
            android:layout_below="@+id/ab"
            />

    </RelativeLayout>

