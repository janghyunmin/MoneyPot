<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantec.moneypot.activity.prefer.ActivityPrefer">

    <ImageView
        android:id="@+id/closedBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/closedBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="관심있는 분야나 기업을 골라주세요."
        android:textSize="20dp"
        android:textColor="@color/text_black_color"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="최대 5개까지 선택하실 수 있습니다."
        android:textSize="14dp"
        android:textColor="@color/sub_title"
        android:layout_marginTop="1dp"
        />

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        >
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_gray_search_page"
            >
            <TextView
                android:id="@+id/sectorTab"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:text="분야"
                android:background="@drawable/tab_bt"
                android:textSize="14dp"
                android:textColor="@color/tab_click"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/enterTab"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:text="기업"
                android:textSize="14dp"
                android:textColor="@color/tab_unclick"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/viewPagerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        >
        <com.quantec.moneypot.util.view.SwipeViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            />
    </LinearLayout>

    <View
        android:id="@+id/backImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/okLayout"
        android:background="#a3000000"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/okLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/prefer_background"
        android:translationY="110dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/openBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/btn_arrow_up"
                />
            <ImageView
                android:id="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/openBt"
                app:layout_constraintBottom_toBottomOf="@+id/openBt"
                app:layout_constraintStart_toStartOf="@+id/image4"
                android:layout_marginStart="25dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/openBt"
                app:layout_constraintBottom_toBottomOf="@+id/openBt"
                app:layout_constraintStart_toStartOf="@+id/image3"
                android:layout_marginStart="25dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/openBt"
                app:layout_constraintBottom_toBottomOf="@+id/openBt"
                app:layout_constraintStart_toStartOf="@+id/image2"
                android:layout_marginStart="25dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/openBt"
                app:layout_constraintBottom_toBottomOf="@+id/openBt"
                app:layout_constraintStart_toStartOf="@+id/image1"
                android:layout_marginStart="25dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/openBt"
                app:layout_constraintBottom_toBottomOf="@+id/openBt"
                app:layout_constraintStart_toEndOf="@+id/openBt"
                android:layout_marginStart="6dp"
                />

            <View
                android:id="@+id/thumbBackImage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="#FAFAFA"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/openBt"
                />

            <TextView
                android:id="@+id/countNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/c_3d3f42"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/openBt"
                app:layout_constraintBottom_toBottomOf="@id/openBt"
                android:layout_marginEnd="24dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c_eaeaea"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewSmall"
            android:visibility="gone"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/topLayout"
            android:paddingBottom="20dp"
            android:layout_marginTop="5dp"
            android:overScrollMode="never"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/okBt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/prefer_bt"
            android:text="선택 완료"
            android:textColor="@color/text_white_color"
            android:textSize="14dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewSmall"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
