<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBt"
        android:layout_marginBottom="2dp"
        android:overScrollMode="never"
        android:background="#ffffff"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".FinishMakePort.PortMakeFinishActivity">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포트 완성!"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/red_text_color"
                android:textSize="30sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="37dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로 만드신 포트의 누적 수익률 그래프입니다."
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:textColor="@color/text_gray_color"
                />

            <View
                android:id="@+id/topLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f4"
                app:layout_constraintTop_toBottomOf="@+id/subtitle"
                android:layout_marginTop="22dp"
                />


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintTop_toBottomOf="@+id/topLine"
                android:layout_marginTop="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                />

            <TextView
                android:id="@+id/m1Bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개월"
                android:textSize="11dp"
                android:textColor="@color/text_gray_color"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintStart_toStartOf="@+id/chartView"
                android:background="@drawable/chart_bt_normalline"
                android:layout_marginTop="21dp"
                />
            <TextView
                android:id="@+id/m3Bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개월"
                android:textSize="11dp"
                android:textColor="@color/red_text_color"
                android:gravity="center"
                android:background="@drawable/chart_bt_redline"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintStart_toEndOf="@+id/m1Bt"
                android:layout_marginStart="30dp"
                android:layout_marginTop="21dp"
                />
            <TextView
                android:id="@+id/m6Bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6개월"
                android:textSize="11dp"
                android:textColor="@color/text_gray_color"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                android:background="@drawable/chart_bt_normalline"
                app:layout_constraintEnd_toStartOf="@+id/mAllBt"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="21dp"
                />
            <TextView
                android:id="@+id/mAllBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누적"
                android:textSize="11dp"
                android:textColor="@color/text_gray_color"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                android:background="@drawable/chart_bt_normalline"
                app:layout_constraintEnd_toEndOf="@+id/chartView"
                android:layout_marginTop="21dp"
                />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중립형 상품"
                android:textSize="11dp"
                android:textColor="@color/text_white_color"
                android:background="@drawable/rectangle_small_green"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/mAllBt"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="19dp"
                />

            <View
                android:id="@+id/middleLine"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:layout_marginTop="16dp"
                android:background="#f4f4f4"
                />

            <TextView
                android:id="@+id/investTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="투자 금액"
                android:textColor="@color/text_gray_color"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/middleLine"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/investPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350만원"
                android:textSize="20sp"
                android:textColor="@color/normal_text_color"
                app:layout_constraintTop_toBottomOf="@+id/investTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:id="@+id/combindTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조합된 포트"
                android:textSize="14dp"
                android:textColor="@color/text_gray_color"
                app:layout_constraintTop_toBottomOf="@+id/investPrice"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="29dp"
                />

            <TextView
                android:id="@+id/potName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/combindTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/potName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/combindTitle"
                app:layout_constraintLeft_toRightOf="@+id/potName1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/potName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/potName2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/potName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/potName1"
                app:layout_constraintLeft_toRightOf="@+id/potName3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/make_finish_port_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:visibility="invisible"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="134dp"
                app:layout_constraintTop_toBottomOf="@+id/combindTitle"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/prevBt"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@color/button_enable"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="이전"
            android:textColor="@color/button_enable_text"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/saveBT"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@color/button_able"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="저장"
            android:textColor="@color/button_able_text"
            android:textSize="15sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>