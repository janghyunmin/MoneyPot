<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.propensity.ActivityPropensity"
    >

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="투자자 성향조사"
        android:textSize="12dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        />
    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#19000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:overScrollMode="never"
        />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/yesBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권유를 원함"
            android:background="@drawable/item_propensity_bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_black_color"
            android:layout_marginStart="45dp"
            />
        <TextView
            android:id="@+id/noBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권유를 원하지 않음"
            android:background="@drawable/item_propensity_bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_black_color"
            android:layout_marginStart="12dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/yesBt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="있음"
            android:background="@drawable/item_propensity_bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_black_color"
            android:layout_marginStart="110dp"
            />
        <TextView
            android:id="@+id/noBt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="없음"
            android:background="@drawable/item_propensity_bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_black_color"
            android:layout_marginStart="12dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout3"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/yesBt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취약 금융소비자에 해당"
            android:background="@drawable/item_propensity_bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_black_color"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:id="@+id/noBt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당사항 없음"
            android:background="@drawable/item_propensity_bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_black_color"
            android:layout_marginStart="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout4"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/yesBt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동의합니다"
            android:background="@drawable/item_propensity_bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_black_color"
            android:layout_marginStart="130dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/yesBt5"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="확인"
        android:textColor="@color/text_white_color"
        app:layout_constraintTop_toBottomOf="parent"
        android:gravity="center"
        android:background="@color/red_text_color"
        android:textSize="18dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>