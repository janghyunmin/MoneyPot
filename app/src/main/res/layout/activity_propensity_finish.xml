<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantec.moneypot.activity.propensity.ActivityPropensityFinish">

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="투자자 성향조사"
        android:textSize="12dp"
        android:textColor="@color/c_3d3f42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backBt"
        app:layout_constraintBottom_toBottomOf="@+id/backBt"
        />

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/grade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_9a9a9a"
        android:text="나의 투자성향은 위험중립형(3등급)입니다."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBt"
        android:layout_marginTop="89dp"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/grade2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="파생투자성향은 원금비보장형(2등급)입니다."
        android:textSize="14dp"
        android:textColor="@color/c_9a9a9a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grade1"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/propensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="투자성향은 언제든지 바꿀 수 있고,\n바꾸지 않는 한 24개월간 현재 성향이 유지됩니다."
        android:textSize="14dp"
        android:textColor="@color/c_9a9a9a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grade2"
        android:layout_marginTop="49dp"
        android:lineSpacingMultiplier="1.4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이제 진짜 기업의 주주가 되러 가볼까요?"
        android:textSize="18dp"
        android:textColor="@color/c_3d3f42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propensity"
        android:layout_marginTop="48dp"
        />

    <TextView
        android:id="@+id/nextBt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="시작하기"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:background="@drawable/select_bt"
        android:textColor="@color/c_ffffff"
        android:textSize="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
