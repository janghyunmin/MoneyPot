<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantec.moneypot.activity.simulation.ActivitySimulation">

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자산커스텀 결과"
        android:textSize="12dp"
        android:textColor="@color/c_3d3f42"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/backBt"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수익률"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/c_3d3f42"
                android:textSize="11dp"
                />

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:textColor="@color/c_f02654"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rateText"
                />
            <TextView
                android:id="@+id/per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="22dp"
                android:textColor="@color/c_f02654"
                app:layout_constraintStart_toEndOf="@+id/rate"
                app:layout_constraintBottom_toBottomOf="@+id/rate"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartView"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                app:layout_constraintTop_toBottomOf="@+id/rate"
                android:layout_marginTop="31dp"
                />

            <View
                android:id="@+id/center"
                android:layout_width="1dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/mon1"
                android:layout_width="55dp"
                android:layout_height="27dp"
                android:text="1개월"
                android:textSize="11dp"
                android:textColor="@color/c_9a9a9a"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintBottom_toTopOf="@+id/line"
                app:layout_constraintEnd_toStartOf="@+id/mon3"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/mon3"
                android:layout_width="55dp"
                android:layout_height="27dp"
                android:text="3개월"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintBottom_toTopOf="@+id/line"
                app:layout_constraintEnd_toStartOf="@+id/center"
                android:layout_marginEnd="20dp"
                android:textSize="11dp"
                android:textColor="@color/c_9a9a9a"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/mon6"
                android:layout_width="55dp"
                android:layout_height="27dp"
                android:text="6개월"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintBottom_toTopOf="@+id/line"
                app:layout_constraintStart_toEndOf="@+id/center"
                android:layout_marginStart="20dp"
                android:textSize="11dp"
                android:textColor="@color/c_9a9a9a"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/monAll"
                android:layout_width="55dp"
                android:layout_height="27dp"
                android:text="누적"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintBottom_toTopOf="@+id/line"
                app:layout_constraintStart_toEndOf="@+id/mon6"
                android:layout_marginStart="40dp"
                android:textSize="11dp"
                android:textColor="@color/c_4e7cff"
                android:background="@drawable/custom_bt_line_blue_15dp"
                android:gravity="center"
                />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                android:layout_marginTop="74dp"
                />

            <LinearLayout
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/chartView"
                app:layout_constraintBottom_toTopOf="@+id/line"
                android:gravity="center"
                android:visibility="gone"
                >
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/entText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포함된 기업들"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:textSize="13dp"
                android:textColor="@color/c_3d3f42"
                />

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_9a9a9a"
                app:layout_constraintStart_toEndOf="@+id/entText"
                app:layout_constraintTop_toTopOf="@+id/entText"
                app:layout_constraintBottom_toBottomOf="@+id/entText"
                android:layout_marginStart="3dp"
                />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/entText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                app:chipSpacingVertical="15dp"
                app:chipSpacingHorizontal="15dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@+id/chipGroup"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/saveBt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="저장하기"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/c_9a9a9a"
            android:background="@color/c_fafafa"
            />

        <TextView
            android:id="@+id/investBt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="투자하기"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/c_ffffff"
            android:background="@drawable/prefer_bt"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
