<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="29dp"
    android:layout_marginRight="29dp"
    android:background="@drawable/rectangle_category"
    >

    <TextView
        android:id="@+id/allBt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="전체"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/singleBt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="단일 기업 순"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/allBt"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/packBt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="묶음 기업 순"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/singleBt"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>