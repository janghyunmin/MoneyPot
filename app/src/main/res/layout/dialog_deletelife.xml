<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="303dp"
    android:layout_height="187dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tab1_dialog_layout_round"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안내"
        android:textColor="#666666"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="21dp"
        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 라이프 챌린지를\n삭제하시겠습니까?"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:textColor="@color/tab1_dialog_text"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/cancleBt"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:background="@drawable/background_bt_blue"
            android:text="취소"
            android:textColor="@color/normal_title_color"
            />
        <Space
            android:layout_width="6dp"
            android:layout_height="0dp" />
        <Button
            android:id="@+id/okBt"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:background="@drawable/tab1_dialog_round_ok_bt"
            android:text="확인"
            android:textColor="@color/normal_title_color"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>