<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="324dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tab1_dialog_layout_round"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 캐릭터 변경"
        android:textSize="18dp"
        android:textColor="@color/c_3d3f42"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="21dp"
        />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginStart="28dp"
        />
    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포푸리"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toStartOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="@+id/img1"
        android:layout_marginTop="7dp"
        android:textColor="@color/c_3d3f42"
        android:textSize="12dp"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/img1"
        android:layout_marginTop="28dp"
        android:layout_marginStart="17dp"
        />
    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포트지니"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:layout_constraintStart_toStartOf="@+id/img2"
        app:layout_constraintEnd_toEndOf="@+id/img2"
        android:layout_marginTop="7dp"
        />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/img2"
        android:layout_marginTop="28dp"
        android:layout_marginStart="17dp"
        />
    <TextView
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쇼니"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        app:layout_constraintStart_toStartOf="@+id/img3"
        app:layout_constraintEnd_toEndOf="@+id/img3"
        android:layout_marginTop="7dp"
        />
    <ImageView
        android:id="@+id/img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/img3"
        android:layout_marginTop="28dp"
        android:layout_marginStart="17dp"
        />
    <TextView
        android:id="@+id/name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모니코니"
        app:layout_constraintTop_toBottomOf="@+id/img4"
        app:layout_constraintStart_toStartOf="@+id/img4"
        app:layout_constraintEnd_toEndOf="@+id/img4"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/c_9a9a9a"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        android:layout_marginTop="24dp"
        android:text="포푸리는 금융에 눈을 일찍 뜬 캐릭터로 얼굴 한가득 동전을 모으는 캐릭터입니다. 감정이 격해질 때마다 동전이 톡톡 튀어나오는 것이 특징입니다."
        android:lineSpacingMultiplier="1.3"
        />

    <TextView
        android:id="@+id/noBt"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="취소"
        android:background="@drawable/custom_cancle_20dp"
        android:textColor="@color/c_9a9a9a"
        android:textSize="14dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="6dp"
        />
    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        />
    <TextView
        android:id="@+id/okBt"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="변경 완료"
        android:background="@drawable/custom_bt_selected_20dp"
        android:textColor="@color/c_ffffff"
        android:textSize="14dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        android:layout_marginTop="26dp"
        android:layout_marginStart="6dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>