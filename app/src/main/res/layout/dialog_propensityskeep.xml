<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="332dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_radius_10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/c_3d3f42"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:text="투자 정보 미작성"
        />

    <TextView
        android:id="@+id/subTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="12dp"
        android:textColor="@color/tab1_dialog_text"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginStart="60dp"
        android:paddingEnd="48dp"
        android:text="투자 권유를 희망하지 않거나 투자자 정보를 제공하지 않는 경우에는 고객의 별도 의사가 있기 전까지 투자 권유를 하지 않습니다."
        />
    <TextView
        android:id="@+id/subTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:textColor="@color/tab1_dialog_text"
        app:layout_constraintTop_toBottomOf="@+id/subTitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginStart="60dp"
        android:paddingEnd="48dp"
        android:text="투자 시 원금 손실이 발생할 수 있으며, 투자 손익에 대한 책임은 모두 고객에게 귀속됩니다."
        />
    <TextView
        android:id="@+id/subTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:textColor="@color/tab1_dialog_text"
        app:layout_constraintTop_toBottomOf="@+id/subTitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginStart="60dp"
        android:paddingEnd="48dp"
        android:text="투자자 정보를 제공하지 않는 경우, 파생상품 등 거래가 제한될 수 있습니다."
        />
    <TextView
        android:id="@+id/noBt"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:background="@drawable/custom_cancle_20dp"
        android:text="취소"
        android:textSize="14dp"
        android:textColor="@color/c_9a9a9a"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/subTitle3"
        app:layout_constraintEnd_toStartOf="@+id/line"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        />

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/subTitle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/okBt"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:background="@drawable/custom_bt_selected_20dp"
        android:text="동의 및 확인"
        android:textSize="14dp"
        android:textColor="@color/normal_title_color"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/subTitle3"
        android:layout_marginTop="24dp"
        android:layout_marginStart="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>