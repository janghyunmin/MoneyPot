<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="수익률 필터"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:background="@drawable/bottom_sheet_line"
        />

    <ImageView
        android:id="@+id/closeBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_close_whitegray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/m1Bt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="1개월 수익률"
        android:textColor="#9A9A9A"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/topText"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/m3Bt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="3개월 수익률"
        android:textColor="#9A9A9A"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/m1Bt"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/m6Bt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="6개월 수익률"
        android:textColor="#9A9A9A"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/m3Bt"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/mAllBt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="누적 수익률"
        android:textColor="#9A9A9A"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/m6Bt"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/mAllBt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>