<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/numKeyboardLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/num_insertbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:background="@drawable/ds_no_textfield"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:id="@+id/num_key_insertPin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:background="@android:color/transparent"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/insertbox_text" />

            <ImageButton
                android:id="@+id/num_insert_box_delete"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0.2"
                android:background="@android:color/transparent"
                android:contentDescription="전체지움"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ds_btn_back_blue"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/num_key_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/ds_btn_done_bg_selector"
                android:contentDescription="확인"
                android:padding="0dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ds_btn_textfield_ok" />

            <ImageButton
                android:id="@+id/num_key_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/ds_btn_cancel_bg_selector"
                android:contentDescription="취소"
                android:padding="0dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ds_btn_textfield_cancel" />
        </LinearLayout>
    </LinearLayout>

    <!-- 키패드 -->

    <LinearLayout
        android:id="@+id/numkeypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:splitMotionEvents="false" >
        <!-- 첫 째줄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_01"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_02"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_03"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_04"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_05"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_06"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_07"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_08"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_09"
                android:layout_weight="1"
                android:background="#FFFFFF"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false" >

            <ImageButton
                android:id="@+id/key_replace"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/ds_btn_shift_bg_selector"
                android:contentDescription="재배열"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ds_btn_no_replace"
                android:visibility="invisible"
                />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_np0"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_00" />

            <ImageButton
                android:id="@+id/key_delete"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:contentDescription="지움"
                app:srcCompat="@drawable/ds_btn_back" />
        </LinearLayout>
