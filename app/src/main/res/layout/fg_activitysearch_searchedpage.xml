<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/port_search_page_searchPort_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_gray_search_page"
            >
            <TextView
                android:id="@+id/port_search_page_searchPort_tab1"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:text="통합"
                android:background="@drawable/bt_red_search_page"
                android:textSize="11dp"
                android:textColor="@color/normal_title_color"
                android:textStyle="bold"
                android:gravity="center"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="9dp"
                android:background="#e1e1e1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/port_search_page_searchPort_tab1"
                />
            <TextView
                android:id="@+id/port_search_page_searchPort_tab2"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:text="제목"
                android:textSize="11dp"
                android:textColor="@color/dark_gray_color"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toRightOf="@+id/port_search_page_searchPort_tab1"
                android:layout_marginLeft="4dp"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="9dp"
                android:background="#e1e1e1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/port_search_page_searchPort_tab2"
                />
            <TextView
                android:id="@+id/port_search_page_searchPort_tab3"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:text="내용"
                android:textSize="11dp"
                android:textColor="@color/dark_gray_color"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toRightOf="@+id/port_search_page_searchPort_tab2"
                android:layout_marginLeft="4dp"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="9dp"
                android:background="#e1e1e1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/port_search_page_searchPort_tab3"
                />
            <TextView
                android:id="@+id/port_search_page_searchPort_tab4"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:text="종목"
                android:textSize="11dp"
                android:textColor="@color/dark_gray_color"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toRightOf="@+id/port_search_page_searchPort_tab3"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/port_search_page_searchPort_viewpager_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/port_search_page_searchPort_tabs"
        app:layout_constraintBottom_toBottomOf="parent">
        <quantec.com.moneypot.CustomView.SwipeViewPager
            android:id="@+id/port_search_page_searchPort_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>