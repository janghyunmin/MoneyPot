<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:id="@+id/myPotCardView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            app:cardCornerRadius="8dp">
            <TextView
                android:id="@+id/myPotNon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="최근 만든 포트가 없습니다."
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/text_gray_color"
                android:visibility="visible"
                />
            <android.support.constraint.ConstraintLayout
                android:id="@+id/myPot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/myPotName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안정형 연금 투자 전략"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="28dp"
                    android:textSize="14dp"
                    android:textColor="@color/text_black_color"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:id="@+id/myPotTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19.02.04"
                    android:textColor="@color/text_gray_color"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/myPotName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="26dp"
                    />
                <TextView
                    android:id="@+id/myPotYield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26.3%"
                    android:textSize="18dp"
                    android:textColor="@color/red_text_color"
                    app:layout_constraintTop_toTopOf="@+id/myPotName"
                    app:layout_constraintBottom_toBottomOf="@+id/myPotTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="28dp"
                    />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/myPotBt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/myPotCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="포트 요리하기"
            android:textColor="@color/text_white_color"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@drawable/makepot_bt"
            android:layout_marginTop="10dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            />

       <android.support.v7.widget.CardView
           android:id="@+id/myPotCardView2"
           android:layout_width="match_parent"
           android:layout_height="278dp"
           app:layout_constraintTop_toBottomOf="@+id/myPotBt"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="20dp"
           android:layout_marginStart="26dp"
           android:layout_marginEnd="26dp"
           app:cardCornerRadius="8dp"
           >

           <android.support.constraint.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <android.support.v7.widget.RecyclerView
                   android:id="@+id/recyclerView1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:overScrollMode="never"
                   />

           </android.support.constraint.ConstraintLayout>
       </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            app:layout_constraintTop_toBottomOf="@+id/myPotCardView2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="26dp"
            android:overScrollMode="never"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView2"
            />


    </android.support.constraint.ConstraintLayout>
</ScrollView>