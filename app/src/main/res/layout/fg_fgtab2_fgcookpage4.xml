<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/fg_cookpage4_image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/item_banner_tuto"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="너의 포트를 보여줘"
        android:textColor="#00489f"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:background="#55868383"
        android:paddingTop="5dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fg_cookpage4_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fg_cookpage4_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#44c1adc1"
        />
</android.support.constraint.ConstraintLayout>