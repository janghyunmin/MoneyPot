<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="recentlySearchTab"
            type="quantec.com.moneypot.databinding.FgRecentlysearchtabBinding" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/allDeleteBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 삭제"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="11dp"
        android:textColor="@color/dark_gray_color"
        android:padding="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/allDeleteBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:overScrollMode="never"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/allDeleteBt"
        android:background="@drawable/bg_dropshadow"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        android:alpha="0.8"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>