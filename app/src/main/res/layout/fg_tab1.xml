<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="FragmentTab1"
            type="quantec.com.moneypot.Activity.Main.Fragment.FgTab1.Fg_tab1"/>
    </data>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/first_port_page_top"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/background2"
            >
            <LinearLayout
                android:id="@+id/first_port_page_search_bt"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/first_port_page_search_View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_top_search_red"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이상근님의 맞춤포트"
                android:layout_centerInParent="true"
                android:textColor="@color/normal_text_color"
                android:textSize="10sp"
                />
            <LinearLayout
                android:id="@+id/first_port_page_top_image2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:id="@+id/first_port_page_top_image2_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_top_myinfo_red"
                    />
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/first_port_page_mainScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background2"
                >
                <RelativeLayout
                    android:id="@+id/first_port_page_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <TextView
                        android:id="@+id/first_port_page_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="추천포트 랭킹"
                        android:textColor="@color/normal_text_color"
                        android:textSize="12sp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="50dp"
                        />
                    <ImageView
                        android:id="@+id/first_port_page_title_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        app:layout_constraintLeft_toRightOf="@+id/first_port_page_title"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/first_port_page_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/first_port_page_title"
                        />
                    <TextView
                        android:id="@+id/first_port_page_recyclerView_addView_bt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:textSize="10dp"
                        android:textColor="@color/first_port_page_addview_color"
                        android:gravity="center"
                        android:layout_below="@+id/first_port_page_recyclerView"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"
                        />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/first_port_page_ad_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/first_port_page_top_layout"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:id="@+id/first_port_page_ad_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/ic_tippot"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/first_port_page_ad_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#030000"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/first_port_page_ad_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#030000"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/first_port_page_ad_close_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닫기"
                        android:layout_marginRight="20dp"
                        android:textSize="10sp"
                        android:textColor="#80505050"
                        android:layout_gravity="right"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/first_port_page_middle_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/first_port_page_ad_layout"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    >
                    <TextView
                        android:id="@+id/first_port_page_middle_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#미래를 위한 준비"
                        android:textSize="24sp"
                        android:textColor="@color/normal_text_color"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="23dp"
                        />
                    <TextView
                        android:id="@+id/first_port_page_middle_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="은행 이자보다 높은 배당주와 성장주 투자전략\n자산배분을 통해 결혼준비 플랜을 경험하세요."
                        android:textColor="#505050"
                        android:textSize="13sp"
                        android:layout_below="@+id/first_port_page_middle_title"
                        android:layout_marginTop="11dp"
                        />
                    <TextView
                        android:id="@+id/first_port_page_middle_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27"
                        android:textSize="50sp"
                        android:textColor="#f02626"
                        android:layout_below="@+id/first_port_page_middle_subtitle"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/first_port_page_middle_rate"
                        android:text="%"
                        android:textSize="30sp"
                        android:textColor="#f02626"
                        android:layout_alignBaseline="@+id/first_port_page_middle_rate"
                        />
                    <ImageView
                        android:id="@+id/first_port_page_middle_image"
                        android:layout_width="51dp"
                        android:layout_height="65dp"
                        android:src="@drawable/ic_plan_marry"
                        android:layout_below="@+id/first_port_page_middle_subtitle"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:visibility="invisible"
                        />
                    <View
                        android:id="@+id/first_port_page_middle_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef"
                        android:layout_marginBottom="6dp"
                        android:layout_below="@+id/first_port_page_middle_rate"
                        android:layout_marginTop="31dp"
                        />
                    <LinearLayout
                        android:id="@+id/first_port_page_middle_chart_layout"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/first_port_page_middle_line"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/first_port_page_middle_chart"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/first_port_page_middle_chart_dur1_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/unselected_round_button"
                                android:text="1개월"
                                android:textColor="#959595"
                                android:textSize="12sp" />
                            <Button
                                android:id="@+id/first_port_page_middle_chart_dur3_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/unselected_round_button"
                                android:text="3개월"
                                android:textColor="#959595"
                                android:textSize="12sp" />
                            <Button
                                android:id="@+id/first_port_page_middle_chart_dur6_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/unselected_round_button"
                                android:text="6개월"
                                android:textColor="#959595"
                                android:textSize="12sp" />
                            <Button
                                android:id="@+id/first_port_page_middle_chart_dura_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_button"
                                android:text="누적"
                                android:textColor="@color/delete_pressed_text"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/first_port_page_middle_chart_open"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/first_port_page_middle_layout_addview_color"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/first_port_page_middle_chart_layout"
                        android:padding="10dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/first_port_page_bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/first_port_page_middle_layout"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    >

                    <TextView
                        android:id="@+id/first_port_page_bottom_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#찾자 워라밸!"
                        android:textSize="24sp"
                        android:textColor="@color/normal_text_color"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="23dp"
                        android:layout_alignParentRight="true"
                        />

                    <TextView
                        android:id="@+id/first_port_page_bottom_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="잉여자금 이용한 성장주 투자전략으로\n내 취미생활 찾기 프로젝트"
                        android:textColor="#505050"
                        android:textSize="13sp"
                        android:layout_below="@+id/first_port_page_bottom_title"
                        android:layout_marginTop="11dp"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/first_port_page_bottom_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="50sp"
                        android:textColor="#f02626"
                        android:layout_below="@+id/first_port_page_bottom_subtitle"
                        android:layout_toLeftOf="@+id/first_port_page_bottom_per"
                        />

                    <TextView
                        android:id="@+id/first_port_page_bottom_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textSize="30sp"
                        android:textColor="#f02626"
                        android:layout_alignBaseline="@+id/first_port_page_bottom_rate"
                        android:layout_alignParentRight="true"
                        />

                    <ImageView
                        android:id="@+id/first_port_page_bottom_image"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_plan_hobby"
                        android:rotationY="180"
                        android:layout_below="@+id/first_port_page_bottom_subtitle"
                        android:visibility="invisible"
                        />

                    <View
                        android:id="@+id/first_port_page_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@+id/first_port_page_bottom_per"
                        android:layout_marginTop="31dp"
                        />

                    <LinearLayout
                        android:id="@+id/first_port_page_bottom_chart_layout"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/first_port_page_bottom_line"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/first_port_page_bottom_chart"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/first_port_page_bottom_chart_dur1_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/unselected_round_button"
                                android:text="1개월"
                                android:textColor="#959595"
                                android:textSize="12sp" />
                            <Button
                                android:id="@+id/first_port_page_bottom_chart_dur3_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/unselected_round_button"
                                android:text="3개월"
                                android:textColor="#959595"
                                android:textSize="12sp" />
                            <Button
                                android:id="@+id/first_port_page_bottom_chart_dur6_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/unselected_round_button"
                                android:text="6개월"
                                android:textColor="#959595"
                                android:textSize="12sp" />
                            <Button
                                android:id="@+id/first_port_page_bottom_chart_dura_bt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_button"
                                android:text="누적"
                                android:textColor="@color/delete_pressed_text"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/first_port_page_bottom_chart_open"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/first_port_page_middle_layout_addview_color"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/first_port_page_bottom_chart_layout"
                        android:padding="10dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/first_port_page_bottom_layout"
                    android:layout_marginTop="15dp"
                    />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>