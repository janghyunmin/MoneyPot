<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="FgTab4"
            type="quantec.com.moneypot.Activity.Main.Fragment.FgTab4.Fg_tab4"/>
    </data>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab4_recyclerView_Refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tab1_layout"
        >
        <RelativeLayout
            android:id="@+id/tab4_top"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찜한포트"
                android:layout_centerInParent="true"
                android:textColor="@color/normal_text_color"
                android:textSize="15.3sp"
                />
            <TextView
                android:id="@+id/tab4_delete_finish_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/normal_title_color"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tab4_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tab4_top_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:overScrollMode="never"
            />

        <LinearLayout
            android:id="@+id/tab4_loading_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab4_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tab4_top"
            android:gravity="right"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/tab4_delete_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찜 전체 취소"
                android:textSize="11sp"
                android:textColor="#9a9a9a"
                android:background="@drawable/delete_round_bt"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_marginRight="15dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>
</layout>