<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마케팅 푸시 알림"
        android:textSize="14dp"
        android:textColor="@color/c_3d3f42"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        />

    <Switch
        android:id="@+id/switchView"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:track="@drawable/switch_track_selector"
        android:thumb="@drawable/switch_thumb"
        android:layout_marginStart="170dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="24dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info_off_black"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="21dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마케팅 푸시 알림이 설정되어있으나"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/line"
        android:layout_marginTop="14dp"
        android:layout_marginStart="3dp"
        android:textSize="12dp"
        android:textColor="@color/c_3d3f42"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림을 받지 못하신 경우에는 안드로이트폰\n기준 [설정] 에서 [앱] 혹은 [어플리케이션]을\n선택 하신 후 [머니포트] 항목에서 알림\n허용 여부를 확인해주세요."
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image"
        android:textColor="@color/c_3d3f42"
        android:textSize="12dp"
        android:lineSpacingMultiplier="1.3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>