<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        >

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/pieChart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/bond"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:text="채권"
            app:layout_constraintBottom_toTopOf="@+id/divideLine"
            app:layout_constraintStart_toEndOf="@+id/pieChart"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:background="#ff9090"
            android:textColor="#ffffff"
            android:layout_marginBottom="7dp"
            />
        <TextView
            android:id="@+id/bondRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            app:layout_constraintTop_toTopOf="@+id/bond"
            app:layout_constraintBottom_toBottomOf="@+id/bond"
            app:layout_constraintStart_toEndOf="@+id/bond"
            android:layout_marginStart="10dp"
            />

        <View
            android:id="@+id/divideLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/stock"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:text="주식"
            app:layout_constraintTop_toBottomOf="@+id/divideLine"
            app:layout_constraintStart_toEndOf="@+id/pieChart"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:background="#7e6f7b"
            android:textColor="#ffffff"
            android:layout_marginTop="7dp"
            />
        <TextView
            android:id="@+id/stockRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            app:layout_constraintTop_toTopOf="@+id/stock"
            app:layout_constraintStart_toEndOf="@+id/stock"
            android:layout_marginStart="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000044"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#440000"
        />

</LinearLayout>