<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user"
            type="quantec.com.moneypot.databinding.ActivityPotDetailBinding" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/categotyLayout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="66dp"
        android:orientation="horizontal"
        android:background="@drawable/potdetail_round_enable"
        android:layout_marginTop="10dp"
        >
        <TextView
        android:id="@+id/categoryBt1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/potdetail_round_able"
        android:gravity="center"
        android:text="안정형"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/categoryBt2"
        android:layout_weight="1"
        />
        <TextView
        android:id="@+id/categoryBt2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="중립형"
        android:textColor="@color/dark_gray_color"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_weight="1"
        />
        <TextView
        android:id="@+id/categoryBt3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="모험가형"
        android:textColor="@color/dark_gray_color"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categoryBt2"
        android:layout_weight="1"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/red_text_color"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categotyLayout" />

    <TextView
        android:id="@+id/per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="@color/red_text_color"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/rate"
        app:layout_constraintStart_toEndOf="@+id/rate" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toBottomOf="@+id/rate" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/chartLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/chartView"
        app:layout_constraintBottom_toBottomOf="@+id/topLine"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        app:layout_constraintEnd_toEndOf="@+id/chartView"
        />

    <TextView
        android:id="@+id/chartBt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1개월"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        app:layout_constraintTop_toBottomOf="@+id/chartView"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/chartBt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3개월"
        android:textSize="11dp"
        app:layout_constraintTop_toTopOf="@+id/chartBt1"
        app:layout_constraintBottom_toBottomOf="@+id/chartBt1"
        app:layout_constraintStart_toEndOf="@+id/chartBt1"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/chartBt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6개월"
        android:textSize="11dp"
        app:layout_constraintTop_toTopOf="@+id/chartBt2"
        app:layout_constraintBottom_toBottomOf="@+id/chartBt2"
        app:layout_constraintStart_toEndOf="@+id/chartBt2"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/chartBt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="누적"
        android:textSize="11dp"
        app:layout_constraintTop_toTopOf="@+id/chartBt3"
        app:layout_constraintBottom_toBottomOf="@+id/chartBt3"
        app:layout_constraintStart_toEndOf="@+id/chartBt3"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:visibility="invisible"
        />

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="30dp"
        android:background="#fafafa"
        app:layout_constraintTop_toBottomOf="@+id/chartBt1" />

    <TextView
        android:id="@+id/investTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:text="투자 자산 비율"
        android:textColor="@color/dark_gray_color"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLine" />

    <ImageView
        android:id="@+id/investHelpBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_help_whitegray"
        app:layout_constraintBottom_toBottomOf="@+id/investTitle"
        app:layout_constraintStart_toEndOf="@+id/investTitle"
        app:layout_constraintTop_toTopOf="@+id/investTitle" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/investTitle" />

    <TextView
        android:id="@+id/bond"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_rectangle_bond"
        android:gravity="center"
        android:text="채권"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/divideLine"
        app:layout_constraintStart_toEndOf="@+id/pieChart" />

    <TextView
        android:id="@+id/bondRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#ff9090"
        app:layout_constraintBottom_toBottomOf="@+id/bond"
        app:layout_constraintStart_toEndOf="@+id/bond"
        app:layout_constraintTop_toTopOf="@+id/bond" />

    <View
        android:id="@+id/divideLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/pieChart"
        app:layout_constraintTop_toTopOf="@+id/pieChart" />

    <TextView
        android:id="@+id/stock"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/round_rectangle_stock"
        android:gravity="center"
        android:text="주식"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/pieChart"
        app:layout_constraintTop_toBottomOf="@+id/divideLine" />

    <TextView
        android:id="@+id/stockRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#7e6f7b"
        app:layout_constraintStart_toEndOf="@+id/stock"
        app:layout_constraintTop_toTopOf="@+id/stock" />

    <View
        android:id="@+id/middleLine"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="30dp"
        android:background="#fafafa"
        app:layout_constraintTop_toBottomOf="@+id/pieChart" />

    <TextView
        android:id="@+id/scoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:text="상품 스코어링"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleLine" />

    <ImageView
        android:id="@+id/profitImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/img_profit_plus"
        app:layout_constraintEnd_toStartOf="@+id/shieldImage"
        app:layout_constraintTop_toBottomOf="@+id/scoreTitle" />

    <TextView
        android:id="@+id/profitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="수익성"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/profitImage"
        app:layout_constraintStart_toStartOf="@+id/profitImage"
        app:layout_constraintTop_toBottomOf="@+id/profitImage" />

    <ImageView
        android:id="@+id/shieldImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/img_shield_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTitle" />

    <TextView
        android:id="@+id/shieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="안정성"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/shieldImage"
        app:layout_constraintStart_toStartOf="@+id/shieldImage"
        app:layout_constraintTop_toBottomOf="@+id/shieldImage" />

    <ImageView
        android:id="@+id/popularityImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/img_popularity_plus"
        app:layout_constraintStart_toEndOf="@+id/shieldImage"
        app:layout_constraintTop_toBottomOf="@+id/scoreTitle" />

    <TextView
        android:id="@+id/popularityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="인기도"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/popularityImage"
        app:layout_constraintStart_toStartOf="@+id/popularityImage"
        app:layout_constraintTop_toBottomOf="@+id/popularityImage" />

    <View
        android:id="@+id/middle2Line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="30dp"
        android:background="#fafafa"
        app:layout_constraintTop_toBottomOf="@+id/shieldTitle" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:src="@drawable/img_info_bg"
        app:layout_constraintTop_toBottomOf="@+id/middle2Line" />

    <TextView
        android:id="@+id/productTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="상품 정보"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middle2Line" />

    <TextView
        android:id="@+id/productSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="5dp"
        android:text="최소 투자 가능 금액"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productTitle" />

    <ImageView
        android:id="@+id/minInvestHelpBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_help_whitegray"
        app:layout_constraintBottom_toBottomOf="@+id/productSub"
        app:layout_constraintStart_toEndOf="@+id/productSub"
        app:layout_constraintTop_toTopOf="@+id/productSub" />

    <TextView
        android:id="@+id/minInvestPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="200"
        android:textColor="@color/red_text_color"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productSub" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="만원"
        android:textColor="@color/text_black_color"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/minInvestPrice"
        app:layout_constraintStart_toEndOf="@+id/minInvestPrice" />

    <TextView
        android:id="@+id/productText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="#늘어나는 자전거 출퇴근족 #전동자전거"
        android:textColor="@color/red_text_color"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minInvestPrice" />

    <TextView
        android:id="@+id/productContens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="24dp"
        android:lineSpacingMultiplier="1.3"
        android:text="카카오 T바이크 시범 서비스로 급등한 전기 자전저 테마주입니다.관련 기사를 통해 자세한 테마의 설명을 확인하세요."
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/productText" />

    <View
        android:id="@+id/middle3Line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#fafafa"
        app:layout_constraintTop_toBottomOf="@+id/productImage" />

    <!--<androidx.recyclerview.widget.RecyclerView-->
        <!--android:id="@+id/recyclerView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="36dp"-->
        <!--android:overScrollMode="never"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/middle3Line"-->
        <!--/>-->

    <quantec.com.moneypot.util.view.ScrollDisabledRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/middle3Line"
        />

    <View
        android:id="@+id/middle4Line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <TextView
        android:id="@+id/elementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:text="대표 종목 TOP2"
        android:textColor="@color/dark_gray_color"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middle4Line" />

    <TextView
        android:id="@+id/elementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="48dp"
        android:text="종목명"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elementTitle" />

    <TextView
        android:id="@+id/elementRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="78dp"
        android:text="구성비중"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elementTitle" />

    <TextView
        android:id="@+id/element1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="엔에스엔"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/elementName"
        app:layout_constraintStart_toStartOf="@+id/elementName"
        app:layout_constraintTop_toBottomOf="@+id/elementName" />

    <TextView
        android:id="@+id/element1per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="10.00%"
        android:textColor="@color/red_text_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/elementRatio"
        app:layout_constraintStart_toStartOf="@+id/elementRatio"
        app:layout_constraintTop_toBottomOf="@+id/elementRatio" />

    <TextView
        android:id="@+id/element2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="삼천리 자전거"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/elementName"
        app:layout_constraintStart_toStartOf="@+id/elementName"
        app:layout_constraintTop_toBottomOf="@+id/element1" />

    <TextView
        android:id="@+id/element2per"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:text="10.00%"
        android:textColor="@color/red_text_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/elementRatio"
        app:layout_constraintStart_toStartOf="@+id/elementRatio"
        app:layout_constraintTop_toBottomOf="@+id/element1per" />

    <ImageView
        android:id="@+id/elementImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/img_blurred"
        app:layout_constraintStart_toStartOf="@+id/elementName"
        app:layout_constraintEnd_toEndOf="@+id/elementRatio"
        app:layout_constraintTop_toBottomOf="@+id/element2" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"
        app:layout_constraintTop_toBottomOf="@+id/elementImage" />


    <TextView
        android:id="@+id/warningTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:text="투자 유의사항"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine" />

    <ImageView
        android:id="@+id/warningImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down_gray"
        app:layout_constraintBottom_toBottomOf="@+id/warningTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/warningTitle" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/warningTitle">

        <TextView
            android:id="@+id/ansContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:maxWidth="300dp"
            android:text="@string/warring_invest"
            android:textColor="@color/dark_gray_color"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/investBt"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#f02626"
        android:gravity="center"
        android:text="투자하기"
        android:textColor="@color/text_white_color"
        app:layout_constraintTop_toBottomOf="@+id/layout2" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>