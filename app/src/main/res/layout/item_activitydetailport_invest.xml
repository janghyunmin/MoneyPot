<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="PortDetailPageInvest"
            type="quantec.com.moneypot.Activity.DetailPort.Adapter.AdapterDetailPort"/>

    </data>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/port_detail_page_invest_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:id="@+id/port_detail_page_linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/invest_nam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/invest_yiel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f02626"
            android:textSize="18.3sp" />

        <TextView
            android:id="@+id/invest_wei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10%"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/port_detail_page_add_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        app:layout_constraintTop_toBottomOf="@+id/port_detail_page_linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="60dp"
        android:visibility="gone"
        />
</android.support.constraint.ConstraintLayout>
</layout>