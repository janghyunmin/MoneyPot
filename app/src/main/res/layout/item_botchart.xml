<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bot_chart_line"
    android:layout_marginTop="50dp"
    >

    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="머니포트 상품과 예적금 비교"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_black_color"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@+id/chartTitle"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="15dp"
        />

    <TextView
        android:id="@+id/priceTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart"
        android:text="목표 달성 기간"
        android:textSize="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_black_color"
        />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart"
        android:textSize="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="27dp"
        android:textColor="@color/text_black_color"
        />
    <TextView
        android:id="@+id/yearTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceTitle"
        android:text="예적금 시"
        android:textSize="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/gray_brown_color"
        />

    <TextView
        android:id="@+id/yearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceText"
        android:textSize="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_brown_color"
        />

    <View
        android:id="@+id/yearLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/yearTitle"
        android:layout_marginTop="26dp"
        android:background="#f4f4f4"
        />


    <TextView
        android:id="@+id/priceTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/yearLine"
        app:layout_constraintStart_toStartOf="parent"
        android:text="총 투자 금액"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/text_black_color"
        />

    <TextView
        android:id="@+id/priceText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/yearLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/text_black_color"
        android:layout_marginEnd="16dp"
        />
    <View
        android:id="@+id/totalPriceLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/priceTitle2"
        android:layout_marginTop="26dp"
        android:background="#f4f4f4"
        />


    <TextView
        android:id="@+id/priceTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/totalPriceLine"
        app:layout_constraintStart_toStartOf="parent"
        android:text="총 수익금"
        android:textSize="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_black_color"
        />
    <TextView
        android:id="@+id/priceText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/totalPriceLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:text="9,000,000원"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_black_color"
        />

    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_info_off_gray"
        app:layout_constraintTop_toBottomOf="@+id/priceTitle3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="실제 투자는 분기 별로 이루어집니다. 모든 수치는 예상 수익률을\n기반으로 하며 실제 변동사항이 생길 수 있음을 고지드립니다."
        app:layout_constraintStart_toEndOf="@+id/infoImage"
        app:layout_constraintTop_toTopOf="@+id/infoImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10dp"
        android:textColor="@color/gray_brown_color"
        android:layout_marginEnd="16dp"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@+id/infoTitle"
        />

    <LinearLayout
        android:id="@+id/chartLoading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/loadingImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            />

        <!--<ProgressBar-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="40dp"-->
            <!--/>-->
    </LinearLayout>

</android.support.constraint.ConstraintLayout>