<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/endTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이제 너만을 위한 라이프 챌린지가 완성됐어!\n딱 맞는 상품이 있는데, 바로 확인해볼래?"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rectangle_dark_gray"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/text_black_color"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/endRetryBt"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="다시 하기"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/endTitle"
        app:layout_constraintEnd_toStartOf="@+id/endSpace"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="#a9a9a9"
        android:textSize="14dp"
        />

    <View
        android:id="@+id/endSpace"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endTitle"
        />

    <TextView
        android:id="@+id/endJoinBt"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="30초 가입 이동"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/endTitle"
        app:layout_constraintStart_toEndOf="@+id/endSpace"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="#85bc95"
        android:textSize="14dp"
        />

</android.support.constraint.ConstraintLayout>