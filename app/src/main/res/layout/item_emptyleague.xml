<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="278dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_league_none">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1년에 4번, 분기별로 포트리그를 개최합니다.\n최대 1,00만원의 상금에 지금 도전하세요!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/leagueEnterBt"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="26dp"
        android:textColor="@color/text_black_color"
        android:lineSpacingMultiplier="1.3"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/leagueEnterBt"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:text="리그참가"
        android:textSize="16dp"
        android:textColor="@color/red_text_color"
        android:gravity="center"
        android:background="@drawable/rectangle_red_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        />

</android.support.constraint.ConstraintLayout>