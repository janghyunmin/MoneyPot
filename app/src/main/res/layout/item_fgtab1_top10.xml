<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/first_port_page_title_layout_color"
    android:padding="15dp"
    android:id="@+id/Item_Top10_layout"
    >

    <TextView
        android:id="@+id/Item_Top10_num"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text_color"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/Item_Top10_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/normal_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Item_Top10_num"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:id="@+id/Item_Top10_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/delete_pressed_text"
        android:textSize="20.8sp"
        app:layout_constraintRight_toLeftOf="@+id/Item_Top10_per"
        />

    <TextView
        android:id="@+id/Item_Top10_per"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/delete_pressed_text"
        android:textSize="15sp"
        android:text="%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/Item_Top10_rate"
        android:layout_marginBottom="1dp"
        />


</android.support.constraint.ConstraintLayout>