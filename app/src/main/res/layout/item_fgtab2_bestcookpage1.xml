<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="BestCookPage1"
            type="quantec.com.moneypot.Activity.Main.Fragment.FgTab2.Fg_CookPage.Cookpage1.Adapter.AdapterBest"/>

    </data>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="141dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_sideround_cookpage1"
    android:layout_marginLeft="15dp"
    android:id="@+id/item_best_cookpage1_layout"
    >
    <TextView
        android:id="@+id/item_best_cookpage1_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/greyish_brown"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="11dp"
        />
    <ImageView
        android:id="@+id/item_best_cookpage1_crown"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_rank_crown"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/item_best_cookpage1_rank"
        android:layout_marginLeft="2dp"
        android:visibility="invisible"
        />

    <LinearLayout
        android:id="@+id/item_best_cookpage1_addView_layout"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/item_best_cookpage1_addView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_dot_gray"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/item_best_cookpage1_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text_color"
        app:layout_constraintTop_toBottomOf="@+id/item_best_cookpage1_rank"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="11dp"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/item_best_cookpage1_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="19dp"
        android:layout_marginBottom="12dp"
        />

    <TextView
        android:id="@+id/item_best_cookpage1_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_best_cookpage1_rate"
        android:text="%"
        android:textSize="15dp"
        android:layout_marginBottom="12dp"
        />
</android.support.constraint.ConstraintLayout>
</layout>