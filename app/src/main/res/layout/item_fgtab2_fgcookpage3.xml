<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="FgCookPage3"
            type="quantec.com.moneypot.Activity.Main.Fragment.FgTab2.Fg_CookPage.Cookpage3.Adapter.AdapterCookPage3"/>

    </data>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cookpage3_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/item_cookpage3_recyclerView_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/item_cookpage3_recyclerView_port_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/recyclerview_round_image"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/item_cookpage3_recyclerView_port_image_modify"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/profile_edit"
            android:layout_alignBottom="@+id/item_cookpage3_recyclerView_port_image"
            android:layout_marginLeft="37dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_cookpage3_recyclerView_port_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_cookpage3_recyclerView_port_rate"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/item_cookpage3_recyclerView_port_image"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:maxWidth="150dp"
            android:textColor="@color/normal_text_color"
            android:textSize="16.3sp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/item_cookpage3_recyclerView_port_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#f02626"
            android:textSize="19sp"
            android:layout_toLeftOf="@+id/item_cookpage3_recyclerView_port_persent"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/item_cookpage3_recyclerView_port_delete_BT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:textColor="#505050"
            />

        <TextView
            android:id="@+id/item_cookpage3_recyclerView_port_persent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#f02626"
            android:textSize="11.5sp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/item_cookpage3_recyclerView_port_rate"
            android:layout_marginRight="16dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_cookpage3_recyclerView_chart"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        app:layout_constraintTop_toBottomOf="@+id/item_cookpage3_recyclerView_layout"
        android:background="#f1f1f1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/item_cookpage3_recyclerView_chart_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_above="@+id/item_cookpage3_recyclerView_chart_bt_layout"
            android:layout_marginBottom="45dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/chart_background"
            />
        <LinearLayout
            android:id="@+id/item_cookpage3_recyclerView_dur_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:orientation="horizontal"
            android:layout_above="@+id/item_cookpage3_recyclerView_chart_bt_layout"
            android:background="@drawable/chart_bottom_background"
            android:paddingBottom="15dp"
            >
            <Button
                android:id="@+id/item_cookpage3_recyclerView_dur1_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/unselected_round_button"
                android:text="1개월"
                android:textColor="#959595"
                android:textSize="12sp" />
            <Button
                android:id="@+id/item_cookpage3_recyclerView_dur3_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/unselected_round_button"
                android:text="3개월"
                android:textColor="#959595"
                android:textSize="12sp" />
            <Button
                android:id="@+id/item_cookpage3_recyclerView_dur6_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/unselected_round_button"
                android:text="6개월"
                android:textColor="#959595"
                android:textSize="12sp" />
            <Button
                android:id="@+id/item_cookpage3_recyclerView_dura_bt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="누적"
                android:textColor="@color/delete_pressed_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_cookpage3_recyclerView_chart_bt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            >
            <Button
                android:id="@+id/item_cookpage3_recyclerView_chart_add_bt"
                android:layout_width="76.5dp"
                android:layout_height="38.5dp"
                android:text="더보기"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="31dp"
                android:textSize="13sp"
                android:textColor="@color/chart_bt_normal_color"
                android:background="@drawable/chart_add_view_bt_round"
                android:gravity="center"
                />

            <Button
                android:id="@+id/item_cookpage3_recyclerView_chart_invest_bt"
                android:layout_width="91.5dp"
                android:layout_height="38.5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/tab1_dialog_round_cancle_bt"
                android:text="바로 투자"
                android:textSize="13sp"
                android:gravity="center"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/item_cookpage3_recyclerView_chart_share_bt"
                android:layout_width="77dp"
                android:layout_height="38.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="31dp"
                android:textSize="13sp"
                android:text="공유"
                android:textColor="@color/chart_bt_normal_color"
                android:background="@drawable/chart_add_view_bt_round"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
</layout>