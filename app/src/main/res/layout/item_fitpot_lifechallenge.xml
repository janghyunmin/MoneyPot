<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/deleteBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제하기"
            app:layout_constraintBottom_toTopOf="@+id/lifeImage"
            app:layout_constraintEnd_toEndOf="@+id/lifeImage"
            android:textSize="11dp"
            android:textColor="@color/text_black_color"
            />

        <TextView
            android:id="@+id/lifeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 집 마련"
            android:textSize="23dp"
            android:textColor="@color/gray_brown_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/lifeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정교하고 치밀하게 준비했어요.\n당신의 목표와 성향을 골고루 섞은 최적의 상품이에요!"
            android:textSize="11dp"
            app:layout_constraintTop_toBottomOf="@+id/lifeTitle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_gray_color"
            />

        <ImageView
            android:id="@+id/lifeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_question_gray"
            app:layout_constraintTop_toTopOf="@+id/lifeTitle"
            app:layout_constraintBottom_toBottomOf="@+id/lifeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/lifeYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#10년 동안"
            android:textSize="11dp"
            android:textColor="@color/text_black_color"
            app:layout_constraintTop_toBottomOf="@+id/lifeContent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/lifePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#5000만원 모으기"
            android:textSize="11dp"
            android:textColor="@color/text_black_color"
            app:layout_constraintTop_toBottomOf="@+id/lifeContent"
            app:layout_constraintStart_toEndOf="@+id/lifeYear"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/lifePlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#장기 플랜"
            android:textSize="11dp"
            android:textColor="@color/text_black_color"
            app:layout_constraintTop_toBottomOf="@+id/lifeYear"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/lifeExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#투자의 고수"
            android:textSize="11dp"
            android:textColor="@color/text_black_color"
            app:layout_constraintTop_toBottomOf="@+id/lifeYear"
            app:layout_constraintStart_toEndOf="@+id/lifePlan"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/lifeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#조심조심"
            android:textSize="11dp"
            android:textColor="@color/text_black_color"
            app:layout_constraintTop_toBottomOf="@+id/lifeYear"
            app:layout_constraintStart_toEndOf="@+id/lifeExp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            />


        <View
            android:id="@+id/lifeLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/lifePlan"
            android:background="#f4f4f4"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <FrameLayout
            android:id="@+id/flipView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lifeLine"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/front"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/liftStImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_control"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    />
                <TextView
                    android:id="@+id/lifeStName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안전형 연금 투자 전략"
                    app:layout_constraintTop_toTopOf="@+id/liftStImage"
                    app:layout_constraintBottom_toBottomOf="@+id/liftStImage"
                    app:layout_constraintStart_toEndOf="@+id/liftStImage"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/text_black_color"
                    />
                <TextView
                    android:id="@+id/lifeStYield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17.91%"
                    app:layout_constraintTop_toTopOf="@+id/liftStImage"
                    app:layout_constraintBottom_toBottomOf="@+id/liftStImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:textSize="15dp"
                    android:textColor="@color/red_text_color"
                    />
                <TextView
                    android:id="@+id/lifeRecomBt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="더 강력한 상품을 추천해드릴까요?"
                    app:layout_constraintTop_toBottomOf="@+id/lifeStName"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_off_gray"
                    app:layout_constraintTop_toTopOf="@+id/lifeRecomBt"
                    app:layout_constraintBottom_toBottomOf="@+id/lifeRecomBt"
                    app:layout_constraintEnd_toEndOf="@+id/lifeRecomBt"
                    android:layout_marginEnd="70dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/liftStImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_control"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    />
                <TextView
                    android:id="@+id/lifeStName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반대편입니다."
                    app:layout_constraintTop_toTopOf="@+id/liftStImage2"
                    app:layout_constraintBottom_toBottomOf="@+id/liftStImage2"
                    app:layout_constraintStart_toEndOf="@+id/liftStImage2"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/text_black_color"
                    />
                <TextView
                    android:id="@+id/lifeStYield2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100.78%"
                    app:layout_constraintTop_toTopOf="@+id/liftStImage2"
                    app:layout_constraintBottom_toBottomOf="@+id/liftStImage2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:textSize="15dp"
                    android:textColor="@color/red_text_color"
                    />
                <TextView
                    android:id="@+id/lifeRecomBt2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="반대로 돌아가보세요?"
                    app:layout_constraintTop_toBottomOf="@+id/lifeStName2"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_off_gray"
                    app:layout_constraintTop_toTopOf="@+id/lifeRecomBt2"
                    app:layout_constraintBottom_toBottomOf="@+id/lifeRecomBt2"
                    app:layout_constraintEnd_toEndOf="@+id/lifeRecomBt2"
                    android:layout_marginEnd="70dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
