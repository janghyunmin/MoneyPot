<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rankView"
    >

    <ImageView
        android:id="@+id/rankImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/rankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray_color"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/rankLine"
        app:layout_constraintStart_toEndOf="@+id/rankImage"
        android:layout_marginStart="12dp"
        />

    <View
        android:id="@+id/rankLine"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/rankImage"
        app:layout_constraintBottom_toBottomOf="@+id/rankImage"
        />

    <TextView
        android:id="@+id/rankStName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/rankLine"
        app:layout_constraintStart_toEndOf="@+id/rankImage"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/rankStYield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_text_color"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@+id/rankImage"
        app:layout_constraintBottom_toBottomOf="@+id/rankImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        />

</android.support.constraint.ConstraintLayout>