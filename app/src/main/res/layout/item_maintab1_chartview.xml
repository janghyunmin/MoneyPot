<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life challenge"
        android:textSize="18dp"
        android:textColor="@color/red_text_color"
        app:layout_constraintTop_toTopOf="@+id/backBt"
        app:layout_constraintBottom_toBottomOf="@+id/backBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/backBt"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />


    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최종 달성 기간"
        android:textSize="13dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/chartView"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/datePot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="머니포트"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/dateTitle"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5년"
        android:textSize="13dp"
        android:textColor="@color/red_text_color"
        app:layout_constraintTop_toBottomOf="@+id/datePot"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/datePot"
        app:layout_constraintEnd_toEndOf="@+id/datePot"
        />

    <TextView
        android:id="@+id/dateY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예적금"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/dateTitle"
        app:layout_constraintEnd_toEndOf="@+id/chartView"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10년"
        android:textSize="13dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/dateY"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/dateY"
        app:layout_constraintEnd_toEndOf="@+id/dateY"
        />



    <TextView
        android:id="@+id/totalPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 투자 금액"
        android:textSize="13dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/dateTitle"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:id="@+id/totalPricePot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="머니포트"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/totalPriceTitle"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000,000,000,000원"
        android:textSize="13dp"
        android:textColor="@color/red_text_color"
        app:layout_constraintTop_toBottomOf="@+id/totalPricePot"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/totalPricePot"
        app:layout_constraintEnd_toEndOf="@+id/totalPricePot"
        />

    <TextView
        android:id="@+id/totalPriceY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예적금"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/totalPriceTitle"
        app:layout_constraintEnd_toEndOf="@+id/chartView"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000,000,000,000원"
        android:textSize="13dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/totalPriceY"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/totalPriceY"
        app:layout_constraintEnd_toEndOf="@+id/totalPriceY"
        />



    <TextView
        android:id="@+id/totalYieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 수익금"
        android:textSize="13dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/totalPriceTitle"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/totalYieldPot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="머니포트"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/totalYieldTitle"
        app:layout_constraintStart_toStartOf="@+id/chartView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000,000,000원"
        android:textSize="13dp"
        android:textColor="@color/red_text_color"
        app:layout_constraintTop_toBottomOf="@+id/totalYieldPot"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/totalYieldPot"
        app:layout_constraintEnd_toEndOf="@+id/totalYieldPot"
        />

    <TextView
        android:id="@+id/totalYieldY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예적금"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        app:layout_constraintTop_toBottomOf="@+id/totalYieldTitle"
        app:layout_constraintEnd_toEndOf="@+id/chartView"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000,000,000원"
        android:textSize="13dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/totalYieldY"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/totalYieldY"
        app:layout_constraintEnd_toEndOf="@+id/totalYieldY"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="실제 투자는 분기별로 이루어지며, 모든 수치는 예상 수익률을 기반으로 하며,\n실제 변동사항이 있음을 고지드립니다."
        android:textSize="8dp"
        android:textColor="@color/dark_gray_color"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/totalYieldTitle"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/nextBt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="상품 보러 가기"
        android:background="#f1f1f1"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/nextBt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>