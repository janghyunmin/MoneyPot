<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Challenge +"
        android:textColor="@color/red_text_color"
        android:textSize="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#10년 동안"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/priceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#5000만원 모으기"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/dateTitle"
        android:textColor="@color/dark_gray_color"
        android:textSize="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/typeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#장기플랜"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/priceTitle"
        android:textSize="10dp"
        android:textColor="@color/dark_gray_color"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="머니포트와 함\n목표 달성하자!"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:textSize="18dp"
        android:textColor="@color/text_black_color"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/img_mini_3"
        app:layout_constraintTop_toTopOf="@+id/desc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f1f1f1"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_marginTop="10dp"
        />

   <TextView
       android:id="@+id/endPer"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="도달률"
       app:layout_constraintTop_toBottomOf="@+id/line"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="60dp"
       android:textSize="11dp"
       android:textColor="@color/dark_gray_color"
       android:layout_marginTop="10dp"
       />
    <TextView
        android:id="@+id/persent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15%"
        app:layout_constraintTop_toBottomOf="@+id/endPer"
        app:layout_constraintStart_toStartOf="@+id/endPer"
        app:layout_constraintEnd_toEndOf="@+id/endPer"
        android:textSize="18dp"
        android:textColor="@color/red_text_color"
        />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 달성 시작"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="60dp"
        android:textSize="11dp"
        android:textColor="@color/dark_gray_color"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D + 100"
        app:layout_constraintTop_toBottomOf="@+id/endDate"
        app:layout_constraintEnd_toEndOf="@+id/endDate"
        app:layout_constraintStart_toStartOf="@+id/endDate"
        android:textColor="@color/red_text_color"
        android:textSize="18dp"
        />


    <TextView
        android:id="@+id/bottomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="조금 더 빠르게 목표를 이루고 싶나요?"
        android:textSize="14dp"
        android:textColor="@color/text_black_color"
        app:layout_constraintTop_toBottomOf="@+id/endDate"
        android:layout_marginTop="50dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/addInvestBt"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="추가 투자하러 가기"
        android:textColor="@color/dark_gray_color"
        android:gravity="center"
        android:background="#f1f1f1"
        app:layout_constraintTop_toBottomOf="@+id/bottomTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f1f1f1"
        app:layout_constraintTop_toBottomOf="@+id/addInvestBt"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>