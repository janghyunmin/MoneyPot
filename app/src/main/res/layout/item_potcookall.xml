<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:id="@+id/allView"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/potCookAllItemView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/potcookall_gray_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stAddBt"
        android:layout_marginEnd="10dp"
        >

        <ImageView
            android:id="@+id/stImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_1523"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/stTitle"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:gravity="bottom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stImage"
            android:textSize="12dp"
            android:textColor="@color/text_black_color"
            />
        <TextView
            android:id="@+id/stCode"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="top"
            app:layout_constraintStart_toEndOf="@+id/stImage"
            app:layout_constraintTop_toBottomOf="@+id/stTitle"
            android:textSize="10dp"
            android:textColor="@color/text_gray_color"
            android:paddingTop="2dp"
            />

        <ImageView
            android:id="@+id/chartBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_whitegray_24_dp_2"
            app:layout_constraintTop_toTopOf="@+id/stImage"
            app:layout_constraintBottom_toBottomOf="@+id/stImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/showChartView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/stImage"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            >
            <View
                android:id="@+id/topLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f4"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/yieldTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/topLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="30.96"
                android:textSize="24dp"
                android:textColor="@color/red_text_color"
                android:layout_marginTop="11dp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/yieldPerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="20dp"
                android:textColor="@color/red_text_color"
                app:layout_constraintStart_toEndOf="@+id/yieldTitle"
                app:layout_constraintBottom_toBottomOf="@+id/yieldTitle"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/yieldTitle"
                android:layout_marginTop="14.8dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                />
            <TextView
                android:id="@+id/m1Bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개월"
                android:textSize="11dp"
                android:textColor="@color/gray_brown_color"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintStart_toStartOf="@+id/chartView"
                android:background="@drawable/chart_bt_normalline"
                android:layout_marginTop="21dp"
                />
            <TextView
                android:id="@+id/m3Bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개월"
                android:textSize="11dp"
                android:textColor="@color/gray_brown_color"
                android:gravity="center"
                android:background="@drawable/chart_bt_redline"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                app:layout_constraintStart_toEndOf="@+id/m1Bt"
                android:layout_marginStart="30dp"
                android:layout_marginTop="21dp"
                />
            <TextView
                android:id="@+id/m6Bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6개월"
                android:textSize="11dp"
                android:textColor="@color/gray_brown_color"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                android:background="@drawable/chart_bt_normalline"
                app:layout_constraintEnd_toStartOf="@+id/mAllBt"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="21dp"
                />
            <TextView
                android:id="@+id/mAllBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누적"
                android:textSize="11dp"
                android:textColor="@color/gray_brown_color"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/chartView"
                android:background="@drawable/chart_bt_normalline"
                app:layout_constraintEnd_toEndOf="@+id/chartView"
                android:layout_marginTop="21dp"
                />

            <View
                android:id="@+id/bottomLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f4"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                app:layout_constraintTop_toBottomOf="@+id/mAllBt"
                android:layout_marginTop="14dp"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#시장대표"
                app:layout_constraintTop_toBottomOf="@+id/bottomLine"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_gray_color"
                android:layout_marginStart="22dp"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#벤처기업"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_gray_color"
                app:layout_constraintTop_toBottomOf="@+id/bottomLine"
                app:layout_constraintStart_toEndOf="@+id/text1"
                android:layout_marginStart="8dp"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유동성"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_gray_color"
                app:layout_constraintTop_toBottomOf="@+id/bottomLine"
                app:layout_constraintStart_toEndOf="@+id/text2"
                android:layout_marginStart="8dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/text1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/stAddBt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>