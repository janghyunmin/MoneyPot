<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="14dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 자산대비 금융자산의 비중은 어느 정도인가요?"
            android:background="@drawable/item_propensity_yearinput1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14dp"
            android:textColor="@color/text_black_color"
            android:maxWidth="282dp"
            android:lineSpacingMultiplier="1.2"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/per5Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_propensity_yearinput2"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/per5Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_inactive_24_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/per5Text"
                app:layout_constraintBottom_toBottomOf="@+id/per5Text"
                android:layout_marginStart="17dp"
                />
            <TextView
                android:id="@+id/per5Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5% 이하"
                android:textSize="12dp"
                android:textColor="@color/text_black_color"
                android:maxWidth="180dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/per5Image"
                android:lineSpacingMultiplier="1.3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/per10Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_propensity_yearinput2"
            app:layout_constraintTop_toBottomOf="@+id/per5Layout"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/per10Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_inactive_24_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/per10Text"
                app:layout_constraintBottom_toBottomOf="@+id/per10Text"
                android:layout_marginStart="17dp"
                />
            <TextView
                android:id="@+id/per10Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10% 이하"
                android:textSize="12dp"
                android:textColor="@color/text_black_color"
                android:maxWidth="180dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/per10Image"
                android:lineSpacingMultiplier="1.3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/per20Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_propensity_yearinput2"
            app:layout_constraintTop_toBottomOf="@+id/per10Layout"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/per20Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_inactive_24_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/per20Text"
                app:layout_constraintBottom_toBottomOf="@+id/per20Text"
                android:layout_marginStart="17dp"
                />
            <TextView
                android:id="@+id/per20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% 이하"
                android:textSize="12dp"
                android:textColor="@color/text_black_color"
                android:maxWidth="180dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/per20Image"
                android:lineSpacingMultiplier="1.3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/per30Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_propensity_yearinput2"
            app:layout_constraintTop_toBottomOf="@+id/per20Layout"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/per30Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_inactive_24_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/per30Text"
                app:layout_constraintBottom_toBottomOf="@+id/per30Text"
                android:layout_marginStart="17dp"
                />
            <TextView
                android:id="@+id/per30Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30% 이하"
                android:textSize="12dp"
                android:textColor="@color/text_black_color"
                android:maxWidth="180dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/per30Image"
                android:lineSpacingMultiplier="1.3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/per30UpLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_propensity_yearinput2"
            app:layout_constraintTop_toBottomOf="@+id/per30Layout"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/per30UpImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_inactive_24_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/per30UpText"
                app:layout_constraintBottom_toBottomOf="@+id/per30UpText"
                android:layout_marginStart="17dp"
                />
            <TextView
                android:id="@+id/per30UpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30% 이상"
                android:textSize="12dp"
                android:textColor="@color/text_black_color"
                android:maxWidth="180dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/per30UpImage"
                android:lineSpacingMultiplier="1.3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

</LinearLayout>