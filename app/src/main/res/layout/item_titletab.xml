<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="titleTab"
            type="quantec.com.moneypot.databinding.ItemTitletabBinding" />

    </data>

<RelativeLayout
    android:id="@+id/titlePage_tab_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64.5dp"
    android:paddingLeft="25dp"
    >
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text_color"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/per"
        android:textSize="18.3dp"
        />
    <TextView
        android:id="@+id/per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/checkBt"
        android:layout_marginRight="10dp"
        android:textSize="12.3dp"
        android:layout_alignBaseline="@+id/rate"
        />
    <LinearLayout
        android:id="@+id/checkBt"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/checkImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="1dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f2f2f2"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>
</layout>