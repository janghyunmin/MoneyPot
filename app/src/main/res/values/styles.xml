<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TabColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@fonts/noto_sans</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <!--<item name="android:windowBackground">@color/red_text_color</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@fons/noto_sans</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@color/red_text_color</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MainStatus" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!--E5E5E5-->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="colorAccent">#FF0000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="TabTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#FF0000</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">#FF0000</item>       <!-- 탭바 선택된 텍스트 -->
        <!--<item name="android:textColorSecondary">@android:color/black</item>     &lt;!&ndash; 탭바 텍스트 &ndash;&gt;-->
        <item name="colorAccent">#FF0000</item>                    <!-- 하단 움직이는 바 색-->
    </style>


    <style name="TextInputLayoutWithPrimaryColor" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">#382</item>
        <item name="colorPrimary">@color/TabColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">#FAFAFA</item>
        <!--<item name="floatingSearch_viewSearchInputTextColor"></item>-->
        <!--<item name="floatingSearch_viewSuggestionItemTextColor"></item>-->
        <item name="floatingSearch_hintTextColor">#CCCCCC</item>
        <item name="floatingSearch_dividerColor">#CCCCCC</item>
        <!--<item name="floatingSearch_clearBtnColor"></item>-->
        <item name="floatingSearch_leftActionColor"></item>
        <!--<item name="floatingSearch_menuItemIconColor"></item>-->
        <!--<item name="floatingSearch_suggestionRightIconColor"></item>-->
        <!--<item name="floatingSearch_actionMenuOverflowColor"></item>-->
    </style>

</resources>
